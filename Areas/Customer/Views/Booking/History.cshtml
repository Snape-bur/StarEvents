@model IEnumerable<StarEvents.Models.Booking>
@{
    ViewData["Title"] = "Booking History";
}

<div class="max-w-6xl mx-auto px-4 mt-10">
    <h1 class="text-3xl font-bold mb-6 text-gray-800">My Booking History</h1>

    @if (!Model.Any())
    {
        <div class="text-center py-16 bg-white rounded-xl shadow-sm ring-1 ring-gray-100">
            <p class="text-gray-500 text-lg">You have no completed bookings yet.</p>
        </div>
    }
    else
    {
        <div class="grid gap-6 md:grid-cols-2">
            @foreach (var b in Model.Where(b => b.Status == "Completed" || b.Status == "Attended"))
            {
                <div class="rounded-xl overflow-hidden bg-white shadow ring-1 ring-gray-200 hover:ring-blue-200 transition">
                    <!-- Header -->
                    <div class="p-4 border-b bg-blue-50">
                        <h2 class="text-lg font-semibold text-blue-700">@b.Event?.Title</h2>
                        <p class="text-sm text-gray-600">@b.Event?.Venue?.Name</p>
                        <p class="text-xs text-gray-400">Booked on @b.BookingDate.ToString("dd MMM yyyy")</p>
                    </div>

                    <!-- Content -->
                    <div class="p-5 text-center flex flex-col items-center">
                        <p class="text-gray-700 mb-2">
                            <strong>Total Paid:</strong> $@b.TotalPrice.ToString("0.00")
                        </p>
                        <p class="text-sm text-gray-500 mb-4">
                            <span class="font-medium text-green-600">@b.Status</span>
                        </p>

                        @if (!string.IsNullOrEmpty(b.QRCodePath))
                        {
                            <img src="@b.QRCodePath.Replace("wwwroot", "")"
                                 alt="QR Code"
                                 class="w-32 h-32 mb-3 border rounded-lg shadow-sm ring-1 ring-gray-200" />
                        }

                        <a asp-action="Ticket" asp-route-id="@b.BookingId"
                           class="inline-block bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium px-5 py-2 rounded-md shadow">
                            View Ticket
                        </a>
                    </div>
                </div>
            }
        </div>
    }
</div>
