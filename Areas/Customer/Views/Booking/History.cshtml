@model IEnumerable<StarEvents.Models.Booking>
@{
    ViewData["Title"] = "Booking History";
}

<div class="max-w-5xl mx-auto px-4 mt-10">
    <h1 class="text-2xl font-bold mb-6 text-gray-800">My Booking History</h1>

    @if (!Model.Any())
    {
        <div class="text-center py-10 text-gray-500">
            <p>No completed bookings yet.</p>
        </div>
    }
    else
    {
        <div class="grid md:grid-cols-2 gap-6">
            @foreach (var b in Model)
            {
                <div class="border rounded-xl shadow-sm bg-white overflow-hidden">
                    <div class="p-4 border-b bg-gray-50">
                        <h2 class="text-lg font-semibold text-blue-600">@b.Event?.Title</h2>
                        <p class="text-sm text-gray-500">@b.Event?.Venue?.Name</p>
                        <p class="text-xs text-gray-400">Booked on @b.BookingDate.ToString("dd MMM yyyy")</p>
                    </div>
                    <div class="p-4 flex flex-col items-center text-center">
                        <p class="text-gray-700 mb-2"><strong>Total Paid:</strong> $@b.TotalPrice.ToString("0.00")</p>

                        @if (!string.IsNullOrEmpty(b.QRCodePath))
                        {
                            <img src="@b.QRCodePath.Replace("wwwroot", "")"
                                 alt="QR Code" class="w-32 h-32 mb-3 border rounded-md shadow-sm" />
                        }

                        <a asp-action="Ticket" asp-route-id="@b.BookingId"
                           class="inline-block mt-2 bg-blue-600 hover:bg-blue-700 text-white text-sm px-4 py-2 rounded-md">
                            View Ticket
                        </a>
                    </div>
                </div>
            }
        </div>
    }
</div>
