@model StarEvents.Models.Event

@{
    ViewData["Title"] = "Checkout";

    var discount = Model.Discounts?
        .FirstOrDefault(d =>
            d.IsActive &&
            d.StartDate <= DateTime.UtcNow &&
            d.EndDate >= DateTime.UtcNow
        );

    decimal originalPrice = Model.TicketPrice;
    decimal finalPrice = discount != null
        ? originalPrice - (originalPrice * discount.Percentage / 100)
        : originalPrice;

    int loyaltyPoints = ViewBag.LoyaltyPoints ?? 0;
    int blocks = loyaltyPoints / 100;
    if (blocks > 5) blocks = 5;

    // ==========================
    // Ticket Limit Logic
    // ==========================
    int maxPerUser = 4;
    int alreadyBought = ViewBag.AlreadyBought != null ? (int)ViewBag.AlreadyBought : 0;
    int remainingAllowed = maxPerUser - alreadyBought;
    if (remainingAllowed < 0) remainingAllowed = 0;
}

<div class="max-w-2xl mx-auto mt-12 bg-white rounded-3xl shadow-xl p-8">

    <h2 class="text-2xl font-bold mb-4">Checkout</h2>

    @if (alreadyBought >= maxPerUser)
    {
        <div class="mb-4 bg-red-100 border border-red-200 text-red-700 px-4 py-3 rounded-xl">
            You have already purchased the maximum of @maxPerUser tickets for this event.
        </div>
    }
    else
    {
        <div class="mb-4 bg-blue-50 border border-blue-200 text-blue-700 px-4 py-3 rounded-xl">
            You already bought <strong>@alreadyBought</strong> ticket(s).
            You can still buy <strong>@remainingAllowed</strong> more.
        </div>
    }

    <form asp-area="Customer"
          asp-controller="Booking"
          asp-action="CreateBooking"
          method="post"
          class="space-y-6">

        <input type="hidden" name="eventId" value="@Model.EventId" />

        <!-- Quantity -->
        <div>
            <label class="font-semibold">Quantity</label>

            @if (remainingAllowed <= 0)
            {
                <select class="w-full border p-3 rounded-xl mt-1" disabled>
                    <option>You reached the ticket limit</option>
                </select>
            }
            else
            {
                var maxSelectable = Math.Min(Model.AvailableSeats, remainingAllowed);

                <select name="quantity" class="w-full border p-3 rounded-xl mt-1">
                    @for (int i = 1; i <= maxSelectable; i++)
                    {
                        <option value="@i">@i ticket(s)</option>
                    }
                </select>
            }
        </div>

        <!-- Promo Code -->
        <div>
            <label class="font-semibold">Promo Code (optional)</label>
            <input type="text" name="promoCode"
                   class="w-full border p-3 rounded-xl mt-1"
                   placeholder="Enter promo code" />
        </div>

        <!-- Redeem Points -->
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">
                Redeem Points (optional)
            </label>

            <select name="redeemPercent"
                    class="w-full rounded-xl border border-gray-300 px-4 py-2.5 text-sm">

                <option value="0">
                    Do not use points — You have @loyaltyPoints pts
                </option>

                @for (int percent = 10; percent <= 50; percent += 10)
                {
                    int required = percent * 10;
                    if (loyaltyPoints >= required)
                    {
                        <option value="@percent">Use @required pts → @percent% off</option>
                    }
                    else
                    {
                        <option disabled>Use @required pts → Need @required pts (You have @loyaltyPoints)</option>
                    }
                }
            </select>
        </div>

        <button class="w-full bg-primary-600 hover:bg-primary-700 text-white font-semibold py-3 rounded-xl
                      @(remainingAllowed <= 0 ? "opacity-50 cursor-not-allowed" : "")"
                @(remainingAllowed <= 0 ? "disabled" : "")>
            Continue →
        </button>

    </form>

</div>
