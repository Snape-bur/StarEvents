@model IEnumerable<StarEvents.Models.Booking>

@{
    ViewData["Title"] = "My Bookings";
}

<link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<div class="max-w-6xl mx-auto mt-10 px-4 space-y-8">

    <h2 class="text-3xl font-extrabold text-primary-600">
        My Bookings
    </h2>

    @if (!Model.Any())
    {
        <div class="text-center py-20 text-gray-500">
            <p class="text-lg">You have no bookings yet.</p>
            <p class="text-sm mt-1">Browse events and get your first ticket.</p>
        </div>
    }
    else
    {
        <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">

            @foreach (var b in Model)
            {
                <div class="rounded-2xl bg-white shadow-xl ring-1 ring-gray-200 p-6 flex flex-col justify-between">

                    <!-- Event Title -->
                    <div>
                        <h3 class="text-lg font-bold text-gray-900 line-clamp-2">
                            @b.Event?.Title
                        </h3>

                        <p class="mt-1 text-sm text-gray-500 flex items-center gap-1">
                            <i class="bi bi-geo-alt text-primary-600"></i>
                            @b.Event?.Venue?.Name
                        </p>

                        <p class="text-sm text-gray-500 flex items-center gap-1">
                            <i class="bi bi-calendar-event text-primary-600"></i>
                            @b.Event?.StartDate.ToString("dd MMM yyyy — hh:mm tt")
                        </p>
                    </div>

                    <!-- Divider -->
                    <div class="my-4 border-t border-gray-200"></div>

                    <!-- Ticket Info -->
                    <div class="space-y-1">
                        <p class="text-sm">
                            <span class="font-semibold text-gray-700">Qty:</span>
                            @b.Quantity
                        </p>
                        <p class="text-sm">
                            <span class="font-semibold text-gray-700">Total:</span>
                            ฿@b.FinalPrice.ToString("0.00")
                        </p>
                    </div>

                    <!-- Divider -->
                    <div class="my-4 border-t border-gray-200"></div>

                    <!-- Status -->
                    <div class="flex items-center justify-between">

                        @if (b.Status == "Paid")
                        {
                            <span class="px-3 py-1 text-xs bg-green-100 text-green-700 rounded-full">
                                Paid
                            </span>
                        }
                        else if (b.Status == "Pending")
                        {
                            <div>
                                <span class="px-3 py-1 text-xs bg-yellow-100 text-yellow-700 rounded-full">
                                    Pending
                                </span>

                                @if (b.ReservationExpiresAt != null)
                                {
                                    <div class="text-xs text-red-600 mt-1"
                                         id="timer-@b.BookingId">
                                        --:--
                                    </div>

                                    <script>
                                        (function () {
                                            const expiresAt = new Date("@b.ReservationExpiresAt.Value.ToString("yyyy-MM-ddTHH:mm:ss")Z");
                                            const el = document.getElementById("timer-@b.BookingId");

                                            function tick() {
                                                const diff = expiresAt - new Date();
                                                if (diff <= 0) {
                                                    el.innerText = "Expired";
                                                    return;
                                                }
                                                const m = Math.floor(diff / 60000);
                                                const s = Math.floor((diff / 1000) % 60);
                                                el.innerText = m.toString().padStart(2, "0") + ":" + s.toString().padStart(2, "0");
                                            }
                                            tick();
                                            setInterval(tick, 1000);
                                        })();
                                    </script>
                                }
                            </div>
                        }
                        else
                        {
                            <span class="px-3 py-1 text-xs bg-red-100 text-red-700 rounded-full">
                                Expired
                            </span>
                        }
                    </div>

                    <!-- Divider -->
                    <div class="my-4 border-t border-gray-200"></div>

                    <!-- Buttons -->
                    <div class="space-y-2">

                        @if (b.Status == "Pending")
                        {
                            <a asp-area="Customer"
                               asp-controller="Payment"
                               asp-action="Confirm"
                               asp-route-id="@b.BookingId"
                               class="w-full flex items-center justify-center gap-2 bg-primary-600 text-white py-2 rounded-xl hover:bg-primary-700">
                                <i class="bi bi-credit-card"></i> Pay Now
                            </a>

                            <form asp-area="Customer"
                                  asp-controller="Booking"
                                  asp-action="Cancel"
                                  method="post">
                                <input type="hidden" name="id" value="@b.BookingId" />
                                <button class="w-full flex items-center justify-center gap-2 bg-red-500 text-white py-2 rounded-xl hover:bg-red-600">
                                    <i class="bi bi-x-circle"></i> Cancel
                                </button>
                            </form>
                        }
                        else if (b.Status == "Paid")
                        {
                            <a asp-area="Customer"
                               asp-controller="Booking"
                               asp-action="DownloadTicket"
                               asp-route-id="@b.BookingId"
                               class="w-full flex items-center justify-center gap-2 bg-primary-600 text-white py-2 rounded-xl hover:bg-green-700">
                                <i class="bi bi-ticket-detailed"></i> Download Ticket
                            </a>
                        }
                        else
                        {
                            <button disabled
                                    class="w-full bg-gray-200 text-gray-500 py-2 rounded-xl cursor-not-allowed">
                                No Actions
                            </button>
                        }
                    </div>

                </div>
            }
        </div>
    }
</div>
