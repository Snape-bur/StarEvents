@model StarEvents.Models.Event

@{
    ViewData["Title"] = "Book Event";

    // Load active discount (global admin discount)
    var discount = Model.Discounts?
        .FirstOrDefault(d =>
            d.IsActive &&
            d.StartDate <= DateTime.UtcNow &&
            d.EndDate >= DateTime.UtcNow
        );

    decimal originalPrice = Model.TicketPrice;
    decimal finalPrice = originalPrice;
    decimal savedAmount = 0;

    if (discount != null)
    {
        finalPrice = originalPrice - (originalPrice * discount.Percentage / 100);
        savedAmount = originalPrice - finalPrice;
    }
}

<div class="max-w-5xl mx-auto mt-12 bg-white rounded-3xl shadow-xl ring-1 ring-gray-200 p-10">

    <!-- Header -->
    <div class="mb-8">
        <h2 class="text-3xl font-extrabold tracking-tight text-primary-600">
            🎫 Book Event
        </h2>
        <p class="text-gray-500 text-sm mt-1">Reserve seats for your selected event</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-10">

        <!-- Left: Event Info -->
        <div class="space-y-4">
            <h3 class="text-2xl font-bold text-gray-900">@Model.Title</h3>
            <p class="text-gray-600 leading-relaxed">@Model.Description</p>

            <div class="mt-4 text-sm text-gray-700 space-y-2">
                <p><span class="font-semibold">📍 Venue:</span> @Model.Venue?.Name</p>
                <p>
                    <span class="font-semibold">📅 Date:</span>
                    @Model.StartDate.ToString("MMM dd, yyyy") → @Model.EndDate.ToString("MMM dd, yyyy")
                </p>

                <!-- Price with Discount -->
                <p>
                    <span class="font-semibold">💲 Price per Ticket:</span>

                    @if (discount == null)
                    {
                        <span class="text-primary-600 font-semibold">
                            $@originalPrice.ToString("0.00")
                        </span>
                    }
                    else
                    {
                        <div class="flex items-center gap-2">
                            <span class="text-red-600 font-bold text-lg">
                                $@finalPrice.ToString("0.00")
                            </span>
                            <span class="line-through text-gray-500 text-sm">
                                $@originalPrice.ToString("0.00")
                            </span>
                            <span class="text-green-600 text-xs font-medium">
                                (@discount.Percentage% OFF)
                            </span>
                        </div>
                    }
                </p>

                <p>
                    <span class="font-semibold">🎟 Available Seats:</span>
                    @Model.AvailableSeats
                </p>
            </div>
        </div>

        <!-- Right: Booking Form -->
        <div class="bg-gray-50 rounded-2xl p-6 shadow-inner ring-1 ring-gray-100">
            <form asp-action="Create" method="post" class="space-y-6">

                <input type="hidden" name="eventId" value="@Model.EventId" />

                <!-- Quantity -->
                <div>
                    <label class="block text-sm font-medium text-gray-800 mb-1">Select Quantity</label>
                    <input type="number"
                           name="quantity"
                           min="1"
                           max="@Model.AvailableSeats"
                           class="w-full rounded-xl border border-gray-300 px-4 py-3 text-gray-900
                                  focus:ring-2 focus:ring-primary-300 focus:border-primary-500 transition"
                           required />
                </div>

                <!-- Promo Code Input -->
                <div>
                    <label class="block text-sm font-medium text-gray-800 mb-1">Promo Code (optional)</label>
                    <input type="text"
                           name="promoCode"
                           placeholder="Enter promo code"
                           class="w-full rounded-xl border border-gray-300 px-4 py-3 text-gray-900
                                  focus:ring-2 focus:ring-primary-300 focus:border-primary-500 transition" />
                </div>

                <!-- Price Summary -->
                <div class="bg-white p-4 rounded-xl border text-sm space-y-1">
                    <p class="flex justify-between">
                        <span class="text-gray-700">Price per ticket:</span>

                        @if (discount == null)
                        {
                            <span class="font-semibold text-gray-900" id="pricePer">
                                $@originalPrice.ToString("0.00")
                            </span>
                        }
                        else
                        {
                            <span class="font-semibold text-red-600" id="pricePer">
                                $@finalPrice.ToString("0.00")
                            </span>
                        }
                    </p>

                    @if (discount != null)
                    {
                        <p class="flex justify-between text-xs">
                            <span class="text-green-600">Discount applied:</span>
                            <span class="font-semibold text-green-600">@discount.Percentage% OFF</span>
                        </p>
                    }

                    <p class="flex justify-between">
                        <span class="text-gray-700">Selected quantity:</span>
                        <span class="font-semibold text-gray-900" id="qtySummary">0</span>
                    </p>

                    <p class="flex justify-between border-t pt-2 mt-2">
                        <span class="text-gray-800 font-semibold">Estimated Total:</span>
                        <span class="font-bold text-primary-600" id="totalEstimate">$0.00</span>
                    </p>
                </div>

                <script>
                    const qtyInput = document.querySelector("input[name='quantity']");
                    const qtySummary = document.getElementById("qtySummary");
                    const est = document.getElementById("totalEstimate");
                    const price = @finalPrice; // Discount already applied

                    qtyInput?.addEventListener("input", () => {
                        const qty = parseInt(qtyInput.value || 0);
                        qtySummary.textContent = qty;
                        est.textContent = "$" + (qty * price).toFixed(2);
                    });
                </script>

                <!-- Footer -->
                <div class="flex justify-between items-center pt-4 border-t border-gray-200">

                    <a asp-area="Customer"
                       asp-controller="Event"
                       asp-action="Index"
                       class="text-gray-600 hover:text-primary-600 text-sm font-medium transition flex items-center gap-1">
                        ← Back to Events
                    </a>

                    <button type="submit"
                            class="bg-primary-600 hover:bg-primary-700 text-white px-6 py-3 rounded-xl
                                   font-semibold shadow-md shadow-primary-600/30
                                   active:scale-[0.97] transition">
                        Confirm Booking
                    </button>
                </div>

            </form>
        </div>

    </div>
</div>
