@model StarEvents.Models.Event

@{
    ViewData["Title"] = "Book Event";
}

<div class="max-w-4xl mx-auto mt-10 bg-white p-8 rounded-2xl shadow ring-1 ring-black/5">
    <h2 class="text-2xl font-bold text-blue-700 mb-6">Book Event</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Left: Event Info -->
        <div>
            <h3 class="text-xl font-semibold text-gray-800">@Model.Title</h3>
            <p class="text-gray-600 mt-2">@Model.Description</p>

            <div class="mt-4 text-sm text-gray-500 space-y-1">
                <p><strong>Venue:</strong> @Model.Venue?.Name</p>
                <p><strong>Date:</strong> @Model.StartDate.ToString("MMM dd, yyyy") - @Model.EndDate.ToString("MMM dd, yyyy")</p>
                <p><strong>Price per Ticket:</strong> $@Model.TicketPrice.ToString("0.00")</p>
                <p><strong>Available Seats:</strong> @Model.AvailableSeats</p>
            </div>
        </div>

        <!-- Right: Booking Form -->
        <div>
            <form asp-action="Create" method="post">
                <input type="hidden" name="eventId" value="@Model.EventId" />

                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700">Quantity</label>
                    <input type="number" name="quantity" min="1" max="@Model.AvailableSeats"
                           class="w-full border border-gray-300 rounded-md px-3 py-2 focus:ring-2 focus:ring-blue-400 focus:outline-none" required />
                </div>

                <div class="flex justify-between items-center mt-6">
                    <a asp-area="Customer" asp-controller="Event" asp-action="Index"
                       class="text-gray-600 hover:text-blue-700 transition">← Back to Events</a>

                    <button type="submit"
                            class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-md shadow-md transition">
                        Confirm Booking
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
