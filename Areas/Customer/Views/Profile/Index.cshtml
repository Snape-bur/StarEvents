@model StarEvents.Areas.Customer.Controllers.ProfileViewModel
@{
    ViewData["Title"] = "My Profile";
}

<div class="max-w-2xl mx-auto mt-10 bg-white shadow rounded-xl ring-1 ring-black/5 p-8">
    <h2 class="text-2xl font-bold text-blue-700 mb-6">My Profile</h2>

    @if (TempData["Success"] != null)
    {
        <div class="mb-4 p-3 bg-green-50 border border-green-200 text-green-700 rounded-lg">
            @TempData["Success"]
        </div>
    }

    <form asp-action="Index" method="post" class="space-y-5">
        <div>
            <label asp-for="FullName" class="block font-semibold text-gray-700 mb-1"></label>
            <input asp-for="FullName" class="w-full border rounded-lg px-3 py-2 ring-1 ring-gray-200 focus:ring-blue-500 focus:outline-none" />
            <span asp-validation-for="FullName" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Email" class="block font-semibold text-gray-700 mb-1"></label>
            <input asp-for="Email"
                   class="w-full border rounded-lg px-3 py-2 ring-1 ring-gray-200 bg-gray-100 text-gray-500 cursor-not-allowed"
                   readonly />
        </div>


        <div>
            <label asp-for="PhoneNumber" class="block font-semibold text-gray-700 mb-1"></label>
            <input asp-for="PhoneNumber" class="w-full border rounded-lg px-3 py-2 ring-1 ring-gray-200 focus:ring-blue-500 focus:outline-none" />
            <span asp-validation-for="PhoneNumber" class="text-red-500 text-sm"></span>
        </div>

        <button type="submit" class="bg-blue-600 text-white font-semibold px-6 py-2 rounded-lg hover:bg-blue-700 transition">
            Update Profile
        </button>
    </form>
</div>
