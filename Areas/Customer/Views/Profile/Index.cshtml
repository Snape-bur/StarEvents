@model StarEvents.Areas.Customer.Controllers.ProfileViewModel
@{
    ViewData["Title"] = "My Profile";
}

<div class="max-w-2xl mx-auto mt-12 bg-white rounded-3xl shadow-xl ring-1 ring-gray-200 overflow-hidden">

    <!-- 🔵 Gradient Header -->
    <div class="px-6 py-5 bg-gradient-to-r from-primary-600 to-primary-500 text-white">
        <h2 class="text-2xl font-extrabold tracking-tight">My Profile</h2>
        <p class="text-primary-100 text-sm">Manage and update your personal details</p>
    </div>

    <!-- 📝 Form Section -->
    <div class="p-8">

        @if (TempData["Success"] != null)
        {
            <div class="mb-5 p-3 rounded-lg border border-green-300 bg-green-50 text-green-700 text-sm">
                @TempData["Success"]
            </div>
        }

        <form asp-action="Index" method="post" class="space-y-6">

            <!-- Full Name -->
            <div>
                <label asp-for="FullName" class="block font-semibold text-gray-700 mb-1"></label>
                <input asp-for="FullName"
                       class="w-full rounded-xl border border-gray-300 px-4 py-3 text-gray-900
                              focus:ring-2 focus:ring-primary-300 focus:border-primary-500" />
                <span asp-validation-for="FullName" class="text-red-500 text-sm"></span>
            </div>

            <!-- Email (Readonly) -->
            <div>
                <label asp-for="Email" class="block font-semibold text-gray-700 mb-1"></label>
                <input asp-for="Email"
                       readonly
                       class="w-full rounded-xl border border-gray-200 bg-gray-100 px-4 py-3
                              text-gray-500 cursor-not-allowed" />
            </div>

            <!-- Phone -->
            <div>
                <label asp-for="PhoneNumber" class="block font-semibold text-gray-700 mb-1"></label>
                <input asp-for="PhoneNumber"
                       class="w-full rounded-xl border border-gray-300 px-4 py-3 text-gray-900
                              focus:ring-2 focus:ring-primary-300 focus:border-primary-500" />
                <span asp-validation-for="PhoneNumber" class="text-red-500 text-sm"></span>
            </div>

            <!-- Submit -->
            <button type="submit"
                    class="w-full bg-primary-600 text-white font-semibold py-3 rounded-xl
                           shadow-md shadow-primary-600/20 hover:bg-primary-700 transition active:scale-[0.97]">
                Update Profile
            </button>

        </form>
    </div>

</div>
