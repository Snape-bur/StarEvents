@model StarEvents.Models.Booking
@{
    ViewData["Title"] = "Checkout";
}

<div class="max-w-xl mx-auto mt-12 bg-white rounded-3xl shadow-xl ring-1 ring-gray-200 overflow-hidden">

    <!-- 🔵 Gradient Header -->
    <div class="bg-gradient-to-r from-primary-600 to-primary-500 px-6 py-5 text-white">
        <h2 class="text-2xl font-extrabold tracking-tight">Checkout</h2>
        <p class="text-sm text-primary-100">Confirm your booking and secure your tickets</p>
    </div>

    <!-- 🧾 Summary Section -->
    <div class="p-6 text-gray-800">
        <div class="space-y-2 pb-4 mb-4 border-b border-gray-200">
            <p><span class="font-semibold text-gray-900">Event:</span> @Model.Event?.Title</p>
            <p><span class="font-semibold text-gray-900">Date:</span> @Model.Event?.StartDate.ToString("dd MMM yyyy hh:mm tt")</p>
            <p><span class="font-semibold text-gray-900">Tickets:</span> @Model.Quantity</p>

            <p class="mt-3 text-lg font-semibold text-primary-600">
                Total: $@Model.TotalPrice.ToString("0.00")
            </p>
        </div>

        <p class="text-gray-600 mb-6">
            Please confirm your payment to complete your booking.
        </p>

        <!-- 💳 Pay Now Button -->
        <form asp-action="Confirm" method="post">
            <input type="hidden" name="id" value="@Model.BookingId" />

            <button type="submit"
                    class="w-full bg-primary-600 hover:bg-primary-700 text-white font-semibold
                       px-6 py-3 rounded-xl shadow-md shadow-primary-600/20
                       transition active:scale-[0.97]">
                💳 Pay Now
            </button>
        </form>

        <!-- 🔙 Cancel -->
        <a asp-area="Customer" asp-controller="Booking" asp-action="MyBookings"
           class="block text-center text-gray-500 mt-5 hover:text-primary-600 transition">
            Cancel and return to My Bookings
        </a>
    </div>

</div>
