@model StarEvents.Models.Event

@{
    ViewData["Title"] = "Checkout";

    var discount = Model.Discounts?
        .FirstOrDefault(d =>
            d.IsActive &&
            d.StartDate <= DateTime.UtcNow &&
            d.EndDate >= DateTime.UtcNow
        );

    decimal originalPrice = Model.TicketPrice;
    decimal finalPrice = discount != null
        ? originalPrice - (originalPrice * discount.Percentage / 100)
        : originalPrice;

    int loyaltyPoints = ViewBag.LoyaltyPoints ?? 0;
    int blocks = loyaltyPoints / 100;
    if (blocks > 5) blocks = 5;
}

<div class="max-w-2xl mx-auto mt-12 bg-white rounded-3xl shadow-xl p-8">

    <h2 class="text-2xl font-bold mb-4">Checkout</h2>

    <p class="text-gray-600 mb-6">
        Select your ticket quantity and apply discounts.
    </p>

    <form asp-area="Customer"
          asp-controller="Booking"
          asp-action="CreateBooking"
          method="post"
          class="space-y-6">

        <input type="hidden" name="EventId" value="@Model.EventId" />

        <!-- Quantity -->
        <div>
            <label class="font-semibold">Quantity</label>
            <select name="Quantity" class="w-full border p-3 rounded-xl mt-1">
                @for (int i = 1; i <= Model.AvailableSeats; i++)
                {
                    <option value="@i">@i ticket(s)</option>
                }
            </select>
        </div>

        <!-- Promo Code -->
        <div>
            <label class="font-semibold">Promo Code (optional)</label>
            <input type="text" name="PromoCode"
                   class="w-full border p-3 rounded-xl mt-1"
                   placeholder="Enter promo code" />
        </div>

        <!-- Redeem Points -->
        <div>
            <label class="font-semibold">Redeem Points (optional)</label>
            <select name="RedeemPercent" class="w-full border p-3 rounded-xl mt-1">
                <option value="0">Do not use points</option>

                @for (int i = 1; i <= blocks; i++)
                {
                    <option value="@(i * 10)">
                        Use @(i * 100) pts → @((i * 10))% off
                    </option>
                }
            </select>
        </div>

        <button class="w-full bg-primary-600 hover:bg-primary-700 text-white font-semibold py-3 rounded-xl">
            Continue →
        </button>
    </form>

</div>
