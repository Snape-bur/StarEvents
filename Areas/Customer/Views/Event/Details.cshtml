@model StarEvents.Models.Event

@{
    ViewData["Title"] = "Event Details";
}

<div class="max-w-4xl mx-auto mt-10 bg-white p-8 rounded-2xl shadow ring-1 ring-black/5">
    <h2 class="text-2xl font-bold text-blue-700 mb-4">@Model.Title</h2>

    <div class="text-gray-700 space-y-2">
        <p><strong>Venue:</strong> @Model.Venue?.Name (@Model.Venue?.Location)</p>
        <p><strong>Category:</strong> @Model.Category?.Name</p>
        <p><strong>Date:</strong> @Model.StartDate.ToString("MMM dd, yyyy") - @Model.EndDate.ToString("MMM dd, yyyy")</p>
        <p><strong>Ticket Price:</strong> $@Model.TicketPrice.ToString("0.00")</p>
        <p><strong>Available Seats:</strong> @Model.AvailableSeats</p>
        <p class="mt-4">@Model.Description</p>
    </div>

    <div class="mt-8 flex justify-between">
        <a asp-action="Index" class="text-gray-600 hover:underline">← Back to Events</a>

        <a asp-area="Customer" asp-controller="Booking" asp-action="Create" asp-route-id="@Model.EventId"
           class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-md shadow-md transition">
            Book Now
        </a>
    </div>
</div>
