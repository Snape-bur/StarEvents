@model IEnumerable<StarEvents.Models.Event>
@{
    ViewData["Title"] = "Available Events";
}

<div class="max-w-7xl mx-auto mt-12 px-4">
    <!-- 🔹 Page Header -->
    <div class="flex justify-between items-center mb-8">
        <h2 class="text-3xl font-extrabold text-blue-700">🎟️ Available Events</h2>
        <p class="text-gray-500 text-sm">Browse and book your favorite events below.</p>
    </div>

    <!-- 🔹 Event Grid -->
    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
        @foreach (var e in Model)
        {
            <div class="bg-white shadow-lg rounded-xl p-6 ring-1 ring-gray-100 hover:shadow-2xl transition transform hover:-translate-y-1 duration-300">
                <!-- Event Title & Category -->
                <div class="flex justify-between items-start mb-3">
                    <div>
                        <h3 class="text-xl font-semibold text-gray-800">@e.Title</h3>
                        <p class="text-sm text-gray-500">@e.Category?.Name</p>
                    </div>
                    <span class="px-2 py-1 text-xs bg-blue-100 text-blue-700 font-medium rounded-md">
                        @e.Status
                    </span>
                </div>

                <!-- Description -->
                <p class="text-gray-600 text-sm leading-relaxed mb-3 line-clamp-3">
                    @e.Description
                </p>

                <!-- Venue & Date -->
                <div class="text-sm text-gray-700 space-y-1 mb-3">
                    <p>📍 <span class="font-medium">@e.Venue?.Name</span>, @e.Venue?.Location</p>
                    <p>🗓️ @e.StartDate.ToString("MMM dd, yyyy") → @e.EndDate.ToString("MMM dd, yyyy")</p>
                </div>

                <!-- Price -->
                <p class="text-lg font-semibold text-blue-600">
                    💲@e.TicketPrice.ToString("0.00")
                </p>

                <!-- Button -->
                <div class="mt-4 flex justify-end">
                    <a asp-action="Details" asp-route-id="@e.EventId"
                       class="inline-block bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg text-sm font-medium shadow-sm transition">
                        View Details
                    </a>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="text-center mt-12 text-gray-500">
            <p>No events are currently available. Please check back soon!</p>
        </div>
    }
</div>
