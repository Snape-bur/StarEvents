@model IEnumerable<StarEvents.Models.Event>
@{
    ViewData["Title"] = "Available Events";
}

<div class="max-w-7xl mx-auto mt-12 px-4">

    <!-- 🔹 Page Header -->
    <div class="flex justify-between items-center mb-10">
        <h2 class="text-3xl font-extrabold text-gray-900">
            🎟️ <span class="text-primary-600">Available Events</span>
        </h2>
        <p class="text-gray-500 text-sm">Browse and book your favorite events below.</p>
    </div>

    <!-- 🔹 Event Grid -->
    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8">
        @foreach (var e in Model)
        {
            <div class="bg-white rounded-2xl p-6 shadow-card hover:shadow-xl
                            ring-1 ring-gray-200 transition duration-300 hover:-translate-y-1">

                <!-- Title & Category -->
                <div class="flex justify-between items-start mb-4">
                    <div>
                        <h3 class="text-xl font-bold text-gray-900">@e.Title</h3>
                        <p class="text-sm text-gray-500">@e.Category?.Name</p>
                    </div>

                    <span class="px-2.5 py-1 text-xs rounded-md bg-primary-100 text-primary-700 font-semibold">
                        @e.Status
                    </span>
                </div>

                <!-- Description -->
                <p class="text-gray-600 text-sm mb-4 leading-relaxed line-clamp-3">
                    @e.Description
                </p>

                <!-- Venue & Date -->
                <div class="text-sm text-gray-700 space-y-1 mb-4">
                    <p>📍 <span class="font-semibold">@e.Venue?.Name</span>, @e.Venue?.Location</p>
                    <p>🗓️ @e.StartDate.ToString("MMM dd, yyyy") → @e.EndDate.ToString("MMM dd, yyyy")</p>
                </div>

                <!-- Price -->
                <p class="text-lg font-semibold text-primary-600 mb-4">
                    💲@e.TicketPrice.ToString("0.00")
                </p>

                <!-- Button -->
                <div class="flex justify-end">
                    <a asp-action="Details" asp-route-id="@e.EventId"
                       class="inline-block bg-primary-600 hover:bg-primary-700
                                  text-white px-4 py-2 rounded-xl text-sm font-semibold
                                  shadow-md shadow-primary-600/30 transition">
                        View Details
                    </a>
                </div>
            </div>
        }
    </div>

    <!-- No Events -->
    @if (!Model.Any())
    {
        <div class="text-center mt-12 text-gray-500 text-lg">
            No events are currently available. Please check back soon!
        </div>
    }
</div>
