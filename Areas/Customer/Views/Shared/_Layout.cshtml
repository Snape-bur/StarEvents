@using Microsoft.AspNetCore.Identity
@inject SignInManager<StarEvents.Models.AppUser> SignInManager
@inject UserManager<StarEvents.Models.AppUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - StarEvents</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 text-gray-800">

    <!-- 🌟 Navbar -->
    <header class="bg-white/90 backdrop-blur-md shadow-md sticky top-0 z-50">
        <nav class="max-w-7xl mx-auto flex justify-between items-center py-3 px-6">
            <!-- ✅ Logo -->
            <a asp-area="Customer" asp-controller="Home" asp-action="Index"
               class="text-2xl font-extrabold tracking-tight text-blue-600">
                Star<span class="text-gray-800">Events</span>
            </a>

            <!-- ✅ Nav Links -->
            <ul class="hidden md:flex items-center space-x-8 font-medium text-gray-700">
                <li>
                    <a asp-area="Customer" asp-controller="Home" asp-action="Index"
                       class="hover:text-blue-600 transition">Home</a>
                </li>
                <li>
                    <a asp-area="Customer" asp-controller="Events" asp-action="Index"
                       class="hover:text-blue-600 transition">Events</a>
                </li>
                <li>
                    <a asp-area="Customer" asp-controller="Booking" asp-action="MyBookings"
                       class="hover:text-blue-600 transition">My Bookings</a>
                </li>
                <li>
                    <a asp-area="Customer" asp-controller="Booking" asp-action="History"
                       class="hover:text-blue-600 transition">Booking History</a>
                </li>

                <!-- ✅ Auth Section -->
                @if (SignInManager.IsSignedIn(User))
                {
                    <li class="text-gray-600">👤 @UserManager.GetUserName(User)</li>
                    <li>
                        <form asp-area="Identity" asp-page="/Account/Logout"
                              method="post" class="inline">
                            <button type="submit"
                                    class="text-red-600 hover:text-red-700 transition">
                                Logout
                            </button>
                        </form>
                    </li>
                }
                else
                {
                    <li>
                        <a asp-area="Identity" asp-page="/Account/Login"
                           class="text-blue-600 hover:text-blue-700 transition">Login</a>
                    </li>
                    <li>
                        <a asp-area="Identity" asp-page="/Account/Register"
                           class="bg-blue-600 text-white px-4 py-1.5 rounded-md hover:bg-blue-700 transition">
                            Sign Up
                        </a>
                    </li>
                }
            </ul>
        </nav>
    </header>

    <!-- ✅ Main Body -->
    <main class="max-w-7xl mx-auto py-10 px-6">
        @if (TempData["Ok"] != null)
        {
            <div class="mb-4 rounded-lg bg-green-50 border border-green-300 text-green-700 p-3 text-sm">
                @TempData["Ok"]
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="mb-4 rounded-lg bg-red-50 border border-red-300 text-red-700 p-3 text-sm">
                @TempData["Error"]
            </div>
        }

        @RenderBody()
    </main>

    <!-- ✅ Footer -->
    <footer class="bg-white border-t border-gray-200 py-6 mt-10 text-center text-sm text-gray-500">
        © @DateTime.Now.Year StarEvents — All rights reserved.
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
