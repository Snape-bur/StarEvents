@model StarEvents.Models.Booking
@{
    ViewData["Title"] = "Booking Details";
}

<div class="max-w-3xl mx-auto mt-10 bg-white p-8 rounded-xl shadow-md">
    <h2 class="text-2xl font-semibold text-blue-700 mb-4">Booking Details</h2>

    <dl class="grid grid-cols-1 sm:grid-cols-2 gap-4 text-gray-700">
        <div>
            <dt class="font-semibold">Event</dt>
            <dd>@Model.Event?.Title</dd>
        </div>
        <div>
            <dt class="font-semibold">Customer</dt>
            <dd>@Model.Customer?.FullName ?? @Model.Customer?.Email</dd>
        </div>
        <div>
            <dt class="font-semibold">Quantity</dt>
            <dd>@Model.Quantity</dd>
        </div>
        <div>
            <dt class="font-semibold">Total Price</dt>
            <dd>$@Model.TotalPrice.ToString("0.00")</dd>
        </div>
        <div>
            <dt class="font-semibold">Status</dt>
            <dd>@Model.Status</dd>
        </div>
        <div>
            <dt class="font-semibold">Booking Date</dt>
            <dd>@Model.BookingDate.ToString("MMM dd, yyyy")</dd>
        </div>
        <div class="sm:col-span-2">
            <dt class="font-semibold">QR Code Path</dt>
            <dd>@Model.QRCodePath</dd>
        </div>
    </dl>

    <div class="mt-6">
        <a asp-action="Index" class="text-blue-600 hover:underline">← Back to Bookings</a>
    </div>
</div>
