@model StarEvents.Models.Event
@{
    ViewData["Title"] = "Delete Event";
}

<div class="max-w-3xl mx-auto mt-10 bg-white p-8 rounded-xl shadow-md">
    <h2 class="text-2xl font-semibold text-red-700 mb-4">Delete Event</h2>
    <p class="text-gray-600 mb-6">Are you sure you want to delete this event? This action cannot be undone.</p>

    <div class="bg-gray-50 p-6 rounded-lg border border-gray-200 mb-6">
        <dl class="grid grid-cols-1 sm:grid-cols-2 gap-4 text-gray-700">
            <div>
                <dt class="font-semibold text-gray-600">Title</dt>
                <dd>@Model.Title</dd>
            </div>

            <div>
                <dt class="font-semibold text-gray-600">Category</dt>
                <dd>@Model.Category?.Name</dd>
            </div>

            <div>
                <dt class="font-semibold text-gray-600">Venue</dt>
                <dd>@Model.Venue?.Name</dd>
            </div>

            <div>
                <dt class="font-semibold text-gray-600">Ticket Price</dt>
                <dd>$@Model.TicketPrice.ToString("0.00")</dd>
            </div>

            <div>
                <dt class="font-semibold text-gray-600">Seats</dt>
                <dd>@Model.AvailableSeats / @Model.TotalSeats</dd>
            </div>

            <div>
                <dt class="font-semibold text-gray-600">Status</dt>
                <dd>
                    @if (Model.Status == "Approved")
                    {
                        <span class="px-2 py-1 text-green-700 bg-green-100 rounded-full text-xs font-medium">@Model.Status</span>
                    }
                    else if (Model.Status == "Rejected")
                    {
                        <span class="px-2 py-1 text-red-700 bg-red-100 rounded-full text-xs font-medium">@Model.Status</span>
                    }
                    else
                    {
                        <span class="px-2 py-1 text-yellow-700 bg-yellow-100 rounded-full text-xs font-medium">@Model.Status</span>
                    }
                </dd>
            </div>

            <div class="sm:col-span-2">
                <dt class="font-semibold text-gray-600">Description</dt>
                <dd>@Model.Description</dd>
            </div>
        </dl>
    </div>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="EventId" />

        <div class="flex justify-between">
            <a asp-action="Index" class="text-gray-600 hover:underline">← Back to List</a>
            <button type="submit"
                    class="bg-red-600 hover:bg-red-700 text-white px-6 py-2 rounded-md shadow-md transition">
                Confirm Delete
            </button>
        </div>
    </form>
</div>
