@model StarEvents.Models.Event
@{
    ViewData["Title"] = "Create Event";
}

<div class="max-w-3xl mx-auto mt-10 bg-white p-8 rounded-xl shadow-md ring-1 ring-black/5">
    <h2 class="text-2xl font-semibold text-blue-700 mb-6">Create New Event</h2>

    <form asp-action="Create" method="post" class="space-y-4">
        <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
                <label asp-for="Title" class="block text-sm font-medium text-gray-700">Title</label>
                <input asp-for="Title" class="w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="Title" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="TicketPrice" class="block text-sm font-medium text-gray-700">Ticket Price</label>
                <input asp-for="TicketPrice" type="number" step="0.01" class="w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="TicketPrice" class="text-red-500 text-sm"></span>
            </div>

            <div class="md:col-span-2">
                <label asp-for="Description" class="block text-sm font-medium text-gray-700">Description</label>
                <textarea asp-for="Description" rows="3" class="w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500"></textarea>
                <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="StartDate" class="block text-sm font-medium text-gray-700">Start Date</label>
                <input asp-for="StartDate" type="datetime-local" class="w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="StartDate" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="EndDate" class="block text-sm font-medium text-gray-700">End Date</label>
                <input asp-for="EndDate" type="datetime-local" class="w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="EndDate" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="TotalSeats" class="block text-sm font-medium text-gray-700">Total Seats</label>
                <input asp-for="TotalSeats" type="number" min="1" class="w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="TotalSeats" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="AvailableSeats" class="block text-sm font-medium text-gray-700">Available Seats</label>
                <input asp-for="AvailableSeats" type="number" min="1" class="w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="AvailableSeats" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="VenueId" class="block text-sm font-medium text-gray-700">Venue</label>
                <select asp-for="VenueId" asp-items="ViewBag.VenueId" class="w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500"></select>
                <span asp-validation-for="VenueId" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="CategoryId" class="block text-sm font-medium text-gray-700">Category</label>
                <select asp-for="CategoryId" asp-items="ViewBag.CategoryId" class="w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500"></select>
                <span asp-validation-for="CategoryId" class="text-red-500 text-sm"></span>
            </div>
        </div>

        <div class="mt-6 flex justify-between">
            <a asp-action="Index" class="text-gray-600 hover:underline">← Back to List</a>
            <button type="submit"
                    class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-md shadow-md transition">
                Create Event
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
