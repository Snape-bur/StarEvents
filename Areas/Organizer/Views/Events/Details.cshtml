@model StarEvents.Models.Event
@{
    ViewData["Title"] = "Event Details";
}

<div class="max-w-4xl mx-auto mt-10 bg-white p-8 rounded-xl shadow-md ring-1 ring-black/5">
    <h2 class="text-2xl font-semibold text-blue-700 mb-6">Event Details</h2>

    <dl class="grid grid-cols-1 sm:grid-cols-2 gap-6 text-gray-700">
        <div>
            <dt class="font-semibold text-gray-600">Title</dt>
            <dd class="mt-1">@Model.Title</dd>
        </div>

        <div>
            <dt class="font-semibold text-gray-600">Ticket Price</dt>
            <dd class="mt-1">$@Model.TicketPrice.ToString("0.00")</dd>
        </div>

        <div class="sm:col-span-2">
            <dt class="font-semibold text-gray-600">Description</dt>
            <dd class="mt-1 leading-relaxed">@Model.Description</dd>
        </div>

        <div>
            <dt class="font-semibold text-gray-600">Start Date</dt>
            <dd class="mt-1">@Model.StartDate.ToString("MMM dd, yyyy HH:mm")</dd>
        </div>

        <div>
            <dt class="font-semibold text-gray-600">End Date</dt>
            <dd class="mt-1">@Model.EndDate.ToString("MMM dd, yyyy HH:mm")</dd>
        </div>

        <div>
            <dt class="font-semibold text-gray-600">Total Seats</dt>
            <dd class="mt-1">@Model.TotalSeats</dd>
        </div>

        <div>
            <dt class="font-semibold text-gray-600">Available Seats</dt>
            <dd class="mt-1">@Model.AvailableSeats</dd>
        </div>

        <div>
            <dt class="font-semibold text-gray-600">Venue</dt>
            <dd class="mt-1">
                @Model.Venue?.Name
                <div class="text-sm text-gray-500">@Model.Venue?.Location</div>
            </dd>
        </div>

        <div>
            <dt class="font-semibold text-gray-600">Category</dt>
            <dd class="mt-1">@Model.Category?.Name</dd>
        </div>

        <div>
            <dt class="font-semibold text-gray-600">Status</dt>
            <dd class="mt-1">
                @if (Model.Status == "Approved")
                {
                    <span class="px-2 py-1 text-green-700 bg-green-100 rounded-full text-xs font-medium">@Model.Status</span>
                }
                else if (Model.Status == "Rejected")
                {
                    <span class="px-2 py-1 text-red-700 bg-red-100 rounded-full text-xs font-medium">@Model.Status</span>
                }
                else
                {
                    <span class="px-2 py-1 text-yellow-700 bg-yellow-100 rounded-full text-xs font-medium">@Model.Status</span>
                }
            </dd>
        </div>

        <div>
            <dt class="font-semibold text-gray-600">Created At</dt>
            <dd class="mt-1">@Model.CreatedAt.ToString("MMM dd, yyyy")</dd>
        </div>
    </dl>

    <div class="mt-8 flex justify-between items-center">
        <a asp-action="Index" class="text-gray-600 hover:underline">← Back to List</a>

        @if (Model.Status == "Pending")
        {
            <a asp-action="Edit" asp-route-id="@Model.EventId"
               class="bg-blue-600 hover:bg-blue-700 text-white px-5 py-2 rounded-md shadow-md transition">
                Edit Event
            </a>
        }
    </div>
</div>
