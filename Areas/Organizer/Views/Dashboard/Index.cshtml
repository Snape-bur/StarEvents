@model IEnumerable<StarEvents.Areas.Organizer.Controllers.OrganizerEventSummary>

<div class="max-w-7xl mx-auto mt-10 px-4">
    <!-- HEADER -->
    <div class="flex items-center justify-between mb-6">
        <h2 class="text-3xl font-bold text-gray-800">🎤 Event Performance Summary</h2>
        <span class="text-sm text-gray-500">
            Updated @DateTime.Now.ToString("dd MMM yyyy, hh:mm tt")
        </span>
    </div>

    <!-- KPI CARDS -->
    <div class="grid md:grid-cols-3 gap-6 mb-8">
        <div class="bg-blue-50 border border-blue-100 rounded-2xl p-5 shadow-sm hover:shadow-md transition">
            <p class="text-sm text-blue-600 font-semibold">Total Events</p>
            <p class="text-3xl font-bold text-blue-800 mt-1">@Model.Count()</p>
        </div>

        <div class="bg-green-50 border border-green-100 rounded-2xl p-5 shadow-sm hover:shadow-md transition">
            <p class="text-sm text-green-600 font-semibold">Total Revenue</p>
            <p class="text-3xl font-bold text-green-800 mt-1">
                $@Model.Sum(e => e.TotalRevenue).ToString("0.00")
            </p>
        </div>

        <div class="bg-amber-50 border border-amber-100 rounded-2xl p-5 shadow-sm hover:shadow-md transition">
            <p class="text-sm text-amber-600 font-semibold">Tickets Sold</p>
            <p class="text-3xl font-bold text-amber-800 mt-1">
                @Model.Sum(e => e.TotalTickets)
            </p>
        </div>
    </div>

    <!-- TABLE -->
    <div class="bg-white shadow-md rounded-xl ring-1 ring-gray-100 overflow-hidden">
        <div class="bg-gradient-to-r from-blue-600 to-blue-500 text-white px-6 py-4">
            <h3 class="text-lg font-semibold">Event Details</h3>
        </div>

        <div class="overflow-x-auto">
            <table class="min-w-full text-sm text-gray-700">
                <thead class="bg-blue-50 text-blue-700 uppercase text-xs font-semibold">
                    <tr>
                        <th class="px-6 py-3 text-left">Event</th>
                        <th class="px-6 py-3 text-left">Date</th>
                        <th class="px-6 py-3 text-center">Tickets Sold</th>
                        <th class="px-6 py-3 text-center">Paid</th>
                        <th class="px-6 py-3 text-center">Price ($)</th>
                        <th class="px-6 py-3 text-center">Revenue ($)</th>
                        <th class="px-6 py-3 text-center">Status</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    @foreach (var e in Model)
                    {
                        <tr class="hover:bg-blue-50 transition">
                            <td class="px-6 py-3 font-medium text-gray-800">@e.Title</td>
                            <td class="px-6 py-3">@e.StartDate.ToString("dd MMM yyyy")</td>
                            <td class="px-6 py-3 text-center">@e.TotalTickets</td>
                            <td class="px-6 py-3 text-center text-green-600 font-semibold">@e.PaidTickets</td>
                            <td class="px-6 py-3 text-center">$@e.TicketPrice.ToString("0.00")</td>
                            <td class="px-6 py-3 text-center text-amber-600 font-semibold">$@e.TotalRevenue.ToString("0.00")</td>
                            <td class="px-6 py-3 text-center">
                                <span class="px-3 py-1 rounded-full text-xs font-semibold
                                        @(e.Status == "Approved" ? "bg-green-100 text-green-700"
                                                                              : e.Status == "Pending" ? "bg-yellow-100 text-yellow-700"
                                                                              : "bg-red-100 text-red-700")">
                                @e.Status
                            </span>
                        </td>
                    </tr>
                                        }
                </tbody>
            </table>
        </div>
    </div>

    <!-- COMPACT REVENUE CHART -->
    <div class="mt-10 bg-white p-6 rounded-xl shadow ring-1 ring-gray-100">
        <h3 class="text-lg font-semibold text-gray-800 mb-4">Revenue by Event</h3>
        <canvas id="revenueChart" height="100"></canvas>
    </div>
</div>

<!-- Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    const chartLabels = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Select(e => e.Title)));
    const chartData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Select(e => e.TotalRevenue)));

    new Chart(document.getElementById('revenueChart'), {
        type: 'bar',
        data: {
            labels: chartLabels,
            datasets: [{
                label: 'Revenue ($)',
                data: chartData,
                backgroundColor: 'rgba(37, 99, 235, 0.7)',
                borderColor: 'rgba(37, 99, 235, 1)',
                borderWidth: 1,
                borderRadius: 6,
                hoverBackgroundColor: 'rgba(29, 78, 216, 0.8)',
            }]
        },
        options: {
            responsive: true,
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: { stepSize: 50, color: '#4b5563', font: { size: 12 } },
                    grid: { color: '#e5e7eb' }
                },
                x: {
                    ticks: { color: '#4b5563', font: { size: 12 } },
                    grid: { display: false }
                }
            },
            plugins: {
                legend: {
                    display: false
                },
                tooltip: {
                    backgroundColor: '#1e3a8a',
                    titleColor: '#fff',
                    bodyColor: '#fff'
                }
            }
        }
    });
</script>
