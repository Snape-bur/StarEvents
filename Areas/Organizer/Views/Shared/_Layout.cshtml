@using Microsoft.AspNetCore.Identity
@using StarEvents.Models
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Organizer Panel</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 min-h-screen text-gray-800">
    <div class="flex h-screen overflow-hidden">

        <!-- Sidebar -->
        <aside class="w-64 bg-[#0f172a] text-gray-100 flex flex-col">
            <div class="p-6 text-center border-b border-gray-700">
                <h1 class="text-2xl font-bold"><span class="text-white-900">Star</span><span class="text-purple-600">Event</span></h1>
                <p class="text-sm text-gray-400 mt-1">Organizer Panel</p>
            </div>

            <nav class="flex-1 p-4 space-y-2">
                <a asp-area="Organizer" asp-controller="Dashboard" asp-action="Index"
                   class="block px-4 py-2 rounded-lg hover:bg-blue-600 transition">Dashboard</a>

                <a asp-area="Organizer" asp-controller="Events" asp-action="Index"
                   class="block px-4 py-2 rounded-lg hover:bg-blue-600 transition">My Events</a>

                <a asp-area="Organizer" asp-controller="Bookings" asp-action="Index"
                   class="block px-4 py-2 rounded-lg hover:bg-blue-600 transition">My Bookings</a>
            </nav>

            <div class="p-4 border-t border-gray-700 text-center">
                <form asp-area="Identity" asp-page="/Account/Logout" method="post">
                    <button type="submit"
                            class="bg-red-600 hover:bg-red-700 text-white w-full py-2 rounded-lg transition">
                        Logout
                    </button>
                </form>
            </div>
        </aside>

        <!-- Main content -->
        <main class="flex-1 flex flex-col">
            <header class="bg-white shadow p-4 flex justify-between items-center">
                <h2 class="text-xl font-semibold">@ViewData["Title"]</h2>
                <span class="text-sm text-gray-500">👤 @User.Identity?.Name</span>
            </header>

            <section class="flex-1 overflow-y-auto p-6">
                @RenderBody()
            </section>
        </main>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
