@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="max-w-7xl mx-auto p-6 space-y-8">

    <!-- Header -->
    <div class="flex justify-between items-center">
        <h1 class="text-3xl font-bold text-blue-700">Admin Dashboard</h1>
        <p class="text-gray-500 text-sm">Overview of system activity</p>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="bg-white rounded-xl shadow p-5 border-l-4 border-blue-500">
            <h2 class="text-sm font-semibold text-gray-500">Total Events</h2>
            <p class="text-2xl font-bold text-blue-700 mt-1">@ViewBag.TotalEvents</p>
        </div>

        <div class="bg-white rounded-xl shadow p-5 border-l-4 border-green-500">
            <h2 class="text-sm font-semibold text-gray-500">Total Bookings</h2>
            <p class="text-2xl font-bold text-green-700 mt-1">@ViewBag.TotalBookings</p>
        </div>

        <div class="bg-white rounded-xl shadow p-5 border-l-4 border-yellow-500">
            <h2 class="text-sm font-semibold text-gray-500">Pending Events</h2>
            <p class="text-2xl font-bold text-yellow-600 mt-1">@ViewBag.PendingEvents</p>
        </div>

        <div class="bg-white rounded-xl shadow p-5 border-l-4 border-purple-500">
            <h2 class="text-sm font-semibold text-gray-500">Total Revenue</h2>
            <p class="text-2xl font-bold text-purple-700 mt-1">$@ViewBag.TotalRevenue.ToString("0.00")</p>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Recent Bookings -->
        <div class="bg-white rounded-xl shadow p-5">
            <h2 class="text-lg font-semibold text-gray-800 mb-4">Recent Bookings</h2>
            <table class="min-w-full text-sm text-gray-700">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-3 py-2 text-left">Event</th>
                        <th class="px-3 py-2 text-left">Customer</th>
                        <th class="px-3 py-2 text-left">Amount</th>
                        <th class="px-3 py-2 text-left">Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var b in ViewBag.RecentBookings)
                    {
                        <tr class="border-b hover:bg-gray-50">
                            <td class="px-3 py-2">@b.Event?.Title</td>
                            <td class="px-3 py-2">@b.Customer?.Email</td>
                            <td class="px-3 py-2">$@b.TotalPrice.ToString("0.00")</td>
                            <td class="px-3 py-2">
                                <span class="px-2 py-1 rounded-full text-xs
                                        @(b.Status == "Confirmed" ? "bg-green-100 text-green-700" :
                                                                            b.Status == "Pending" ? "bg-yellow-100 text-yellow-700" :
                                                                            "bg-gray-100 text-gray-600")">
                                @b.Status
                            </span>
                        </td>
                    </tr>
                                        }
                </tbody>
            </table>
        </div>

        <!-- Recent Events -->
        <div class="bg-white rounded-xl shadow p-5">
            <h2 class="text-lg font-semibold text-gray-800 mb-4">Recent Events</h2>
            <table class="min-w-full text-sm text-gray-700">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-3 py-2 text-left">Title</th>
                        <th class="px-3 py-2 text-left">Organizer</th>
                        <th class="px-3 py-2 text-left">Status</th>
                        <th class="px-3 py-2 text-left">Created</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var e in ViewBag.RecentEvents)
                    {
                        <tr class="border-b hover:bg-gray-50">
                            <td class="px-3 py-2">@e.Title</td>
                            <td class="px-3 py-2">@e.Organizer?.FullName ?? e.Organizer?.Email</td>
                            <td class="px-3 py-2">
                                <span class="px-2 py-1 rounded-full text-xs
                                        @(e.Status == "Approved" ? "bg-green-100 text-green-700" :
                                                                            e.Status == "Rejected" ? "bg-red-100 text-red-700" :
                                                                            "bg-yellow-100 text-yellow-700")">
                                @e.Status
                            </span>
                        </td>
                        <td class="px-3 py-2">@e.CreatedAt.ToString("MMM dd, yyyy")</td>
                    </tr>
                                        }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    @Html.Partial("_ValidationScriptsPartial")
}

