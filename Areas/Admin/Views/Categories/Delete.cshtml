@model StarEvents.Models.Venue
@{
    ViewData["Title"] = "Delete Venue";
}

<div class="max-w-3xl mx-auto mt-10 bg-white p-8 rounded-xl shadow-md">
    <h2 class="text-2xl font-semibold text-red-700 mb-6">Delete Venue</h2>

    <p class="text-gray-600 mb-6">
        Are you sure you want to permanently delete this venue? This action cannot be undone.
    </p>

    <dl class="grid grid-cols-1 sm:grid-cols-2 gap-6 text-gray-700 mb-8">
        <div>
            <dt class="font-semibold text-gray-600">Venue Name</dt>
            <dd>@Model.Name</dd>
        </div>

        <div>
            <dt class="font-semibold text-gray-600">Capacity</dt>
            <dd>@Model.Capacity</dd>
        </div>

        <div class="sm:col-span-2">
            <dt class="font-semibold text-gray-600">Location</dt>
            <dd>@Model.Location</dd>
        </div>

        <div class="sm:col-span-2">
            <dt class="font-semibold text-gray-600">Description</dt>
            <dd>
                @if (string.IsNullOrWhiteSpace(Model.Description))
                {
                    <span class="italic text-gray-400">No description provided</span>
                }
                else
                {
                    @Model.Description
                }
            </dd>
        </div>
    </dl>

    <form asp-action="Delete" method="post" class="flex justify-between items-center">
        <input type="hidden" asp-for="VenueId" />
        <a asp-action="Index" class="text-gray-600 hover:underline">← Back to List</a>

        <button type="submit"
                class="bg-red-600 hover:bg-red-700 text-white px-6 py-2 rounded-md shadow-md transition">
            Confirm Delete
        </button>
    </form>
</div>
