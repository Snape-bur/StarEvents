@model StarEvents.Models.Category
@{
    ViewData["Title"] = "Edit Category";
}

<div class="max-w-3xl mx-auto mt-10 bg-white p-8 rounded-xl shadow-md">
    <h2 class="text-2xl font-semibold text-blue-700 mb-6">Edit Category</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="CategoryId" />
        <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>

        <div class="space-y-4">
            <div>
                <label asp-for="Name" class="block text-sm font-medium">Category Name</label>
                <input asp-for="Name" class="form-input w-full border-gray-300 rounded-md" />
                <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Description" class="block text-sm font-medium">Description</label>
                <textarea asp-for="Description" rows="3"
                          class="form-textarea w-full border-gray-300 rounded-md"></textarea>
                <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
            </div>
        </div>

        <div class="mt-6 flex justify-between">
            <a asp-action="Index" class="text-gray-600 hover:underline">← Back to List</a>
            <button type="submit"
                    class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-md shadow-md transition">
                Save Changes
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
