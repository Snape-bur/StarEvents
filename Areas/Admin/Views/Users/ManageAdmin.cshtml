@model IEnumerable<StarEvents.Models.AppUser>
@{
    ViewData["Title"] = "Manage Admins";
    var userRoles = ViewBag.UserRoles as Dictionary<string, string>;
}

<div class="max-w-7xl mx-auto mt-10">
    <div class="flex items-center justify-between mb-6">
        <h1 class="text-3xl font-bold text-blue-700">Manage Admins</h1>
        <a asp-area="Admin" asp-controller="Users" asp-action="Create"
           class="inline-flex items-center px-4 py-2 bg-blue-600 text-white font-semibold rounded-lg shadow hover:bg-blue-700 transition">
            ➕ Create New Admin
        </a>
    </div>

    <div class="bg-white shadow rounded-xl ring-1 ring-black/5 overflow-hidden">
        <table class="min-w-full text-sm text-left text-gray-700 border-collapse">
            <thead class="bg-blue-50 text-blue-700 uppercase text-xs font-semibold">
                <tr>
                    <th class="px-6 py-3">Full Name</th>
                    <th class="px-6 py-3">Email</th>
                    <th class="px-6 py-3 text-center">Role</th>
                    <th class="px-6 py-3 text-center">Created</th>
                    <th class="px-6 py-3 text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var user in Model)
                    {
                        var role = userRoles.ContainsKey(user.Id) ? userRoles[user.Id] : "—";
                        if (role == "Admin")  // ✅ Only show Admins
                        {
                            <tr class="border-t hover:bg-gray-50 transition">
                                <td class="px-6 py-3">@user.FullName</td>
                                <td class="px-6 py-3">@user.Email</td>
                                <td class="px-6 py-3 text-center">
                                    <span class="inline-flex px-2 py-1 rounded-full bg-blue-100 text-blue-700 text-xs font-medium">@role</span>
                                </td>
                                <td class="px-6 py-3 text-center">@user.CreatedAt.ToString("yyyy-MM-dd")</td>
                                <td class="px-6 py-3 text-center space-x-2">
                                    <a asp-area="Admin" asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id"
                                       class="inline-flex items-center px-3 py-1 bg-yellow-500 text-white text-xs font-semibold rounded hover:bg-yellow-600 transition">
                                        ✏️ Edit
                                    </a>

                                    <a asp-area="Admin" asp-controller="Users" asp-action="DeleteConfirm" asp-route-id="@user.Id"
                                       class="inline-flex items-center px-3 py-1 bg-red-600 text-white text-xs font-semibold rounded hover:bg-red-700 transition">
                                        ❌ Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center text-gray-500 py-6">No admin users found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
