@model StarEvents.Models.AppUser
@{
    ViewData["Title"] = "Delete Admin";
}

<div class="max-w-xl mx-auto mt-10 bg-white shadow rounded-xl ring-1 ring-black/5 p-8">
    <h2 class="text-2xl font-bold text-red-600 mb-6">Delete Admin</h2>
    <p class="text-gray-700 mb-4">
        Are you sure you want to delete <strong>@Model.FullName</strong> (@Model.Email)?
        This action cannot be undone.
    </p>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="bg-red-600 text-white font-semibold px-6 py-2 rounded-lg hover:bg-red-700 transition">
            Yes, Delete
        </button>
        <a asp-action="Index" class="ml-3 text-blue-600 hover:underline">Cancel</a>
    </form>
</div>
