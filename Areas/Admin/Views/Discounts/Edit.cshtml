@model StarEvents.Models.Discount

@{
    ViewData["Title"] = "Edit Discount";
}

<div class="bg-white p-6 rounded-2xl shadow max-w-xl">

    <form asp-action="Edit" method="post" class="space-y-5">
        <input type="hidden" asp-for="DiscountId" />

        <!-- Same fields as Create -->
        <div>
            <label class="text-sm font-medium">Promo Code</label>
            <input asp-for="Code" class="w-full border border-gray-300 rounded-lg px-3 py-2" />
        </div>

        <div>
            <label class="text-sm font-medium">Discount Percentage (%)</label>
            <input asp-for="Percentage" type="number" min="1" max="100"
                   class="w-full border border-gray-300 rounded-lg px-3 py-2" />
        </div>
        <div>
            <label class="text-sm font-medium">Apply to Event</label>
            <select asp-for="EventId" asp-items="ViewBag.EventList"
                    class="w-full border border-gray-300 rounded-lg px-3 py-2">
                <option value="">-- Global Discount (All Events) --</option>
            </select>
        </div>


        <div class="grid grid-cols-2 gap-4">
            <div>
                <label class="text-sm font-medium">Start Date</label>
                <input asp-for="StartDate" type="datetime-local"
                       class="w-full border border-gray-300 rounded-lg px-3 py-2" />
            </div>

            <div>
                <label class="text-sm font-medium">End Date</label>
                <input asp-for="EndDate" type="datetime-local"
                       class="w-full border border-gray-300 rounded-lg px-3 py-2" />
            </div>
        </div>

        <div class="flex items-center gap-2">
            <input asp-for="IsActive" type="checkbox" class="h-4 w-4" />
            <label class="text-sm">Active</label>
        </div>

        <div class="flex justify-between items-center">
            <a asp-action="Index" class="text-gray-600 underline">Back to list</a>

            <button type="submit"
                    class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg">
                Save Changes
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
