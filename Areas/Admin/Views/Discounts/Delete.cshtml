@model StarEvents.Models.Discount

@{
    ViewData["Title"] = "Delete Discount";
}

<div class="bg-white p-6 rounded-2xl shadow max-w-xl">

    <p class="mb-4 text-gray-700">
        Are you sure you want to delete this discount?
    </p>

    <div class="mb-4">
        <p class="text-sm text-gray-600">Promo Code</p>
        <p class="font-semibold">@Model.Code</p>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="DiscountId" />

        <div class="flex justify-between mt-6">
            <a asp-action="Index" class="text-gray-600 underline">Cancel</a>

            <button type="submit"
                    class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg">
                Delete
            </button>
        </div>
    </form>
</div>
