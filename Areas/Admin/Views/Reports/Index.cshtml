@{
    ViewData["Title"] = "Reports Dashboard";
    var monthlyRevenue = ViewBag.MonthlyRevenue as IEnumerable<dynamic>;
    var topEvents = ViewBag.TopEvents as IEnumerable<dynamic>;
}

<div class="flex justify-between items-center mb-6">
    <form asp-area="Admin" asp-controller="Reports" asp-action="Index" method="get" class="flex flex-wrap items-end gap-3 mb-6">
        <div>
            <label for="fromDate" class="text-sm font-medium text-gray-700">From Date</label>
            <input type="date" id="fromDate" name="fromDate" value="@ViewBag.FromDate"
                   class="border border-gray-300 rounded-md px-3 py-2 text-sm">
        </div>

        <div>
            <label for="toDate" class="text-sm font-medium text-gray-700">To Date</label>
            <input type="date" id="toDate" name="toDate" value="@ViewBag.ToDate"
                   class="border border-gray-300 rounded-md px-3 py-2 text-sm">
        </div>

        <div>
            <button type="submit"
                    class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md text-sm shadow">
                Filter
            </button>
            <a asp-area="Admin" asp-controller="Reports" asp-action="Index"
               class="ml-2 text-sm text-gray-600 hover:text-gray-800 underline">Clear</a>
        </div>
    </form>
    @if (!string.IsNullOrEmpty(ViewBag.FilterMessage))
    {
        <p class="text-sm text-gray-500 mb-4">@ViewBag.FilterMessage</p>
    }
    <a asp-area="Admin" asp-controller="Reports" asp-action="ExportToPdf"
       asp-route-fromDate="@ViewBag.FromDate"
       asp-route-toDate="@ViewBag.ToDate"
       class="inline-flex items-center gap-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium px-4 py-2 rounded-md shadow transition">
        <i class="fa-solid fa-file-pdf"></i> Export PDF
    </a> 
</div>

<div class="p-6 space-y-6">

    <h1 class="text-3xl font-bold text-gray-800">📊 Reports Dashboard</h1>
    <!-- Summary Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-5 gap-4">
        <div class="bg-blue-600 text-white p-5 rounded-xl shadow">
            <h3 class="text-lg font-semibold">Total Bookings</h3>
            <p class="text-2xl font-bold mt-2">@ViewBag.TotalBookings</p>
        </div>
        <div class="bg-green-600 text-white p-5 rounded-xl shadow">
            <h3 class="text-lg font-semibold">Paid</h3>
            <p class="text-2xl font-bold mt-2">@ViewBag.TotalPaid</p>
        </div>
        <div class="bg-yellow-500 text-white p-5 rounded-xl shadow">
            <h3 class="text-lg font-semibold">Pending</h3>
            <p class="text-2xl font-bold mt-2">@ViewBag.TotalPending</p>
        </div>
        <div class="bg-red-600 text-white p-5 rounded-xl shadow">
            <h3 class="text-lg font-semibold">Cancelled</h3>
            <p class="text-2xl font-bold mt-2">@ViewBag.TotalCancelled</p>
        </div>
        <div class="bg-indigo-600 text-white p-5 rounded-xl shadow">
            <h3 class="text-lg font-semibold">Total Revenue</h3>
            <p class="text-2xl font-bold mt-2">฿@string.Format("{0:N2}", ViewBag.TotalRevenue)</p>
        </div>
    </div>

    <!-- Monthly Revenue Table -->
    <div class="bg-white rounded-2xl shadow p-6">
        <h2 class="text-xl font-bold text-gray-800 mb-4">📅 Monthly Revenue</h2>
        <table class="min-w-full text-sm text-gray-700">
            <thead class="bg-gray-100">
                <tr>
                    <th class="py-2 px-4 text-left">Month</th>
                    <th class="py-2 px-4 text-left">Revenue (฿)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in monthlyRevenue)
                {
                    <tr class="border-b hover:bg-gray-50">
                        <td class="py-2 px-4">@item.Month</td>
                        <td class="py-2 px-4">@item.Total.ToString("N2")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Top Events -->
    <div class="bg-white rounded-2xl shadow p-6">
        <h2 class="text-xl font-bold text-gray-800 mb-4">🏆 Top 5 Events by Sales</h2>
        <table class="min-w-full text-sm text-gray-700">
            <thead class="bg-gray-100">
                <tr>
                    <th class="py-2 px-4 text-left">Event</th>
                    <th class="py-2 px-4 text-left">Sales (฿)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var e in topEvents)
                {
                    <tr class="border-b hover:bg-gray-50">
                        <td class="py-2 px-4">@e.Event</td>
                        <td class="py-2 px-4">@e.Sales.ToString("N2")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Charts Section -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mt-10">

        <!-- 📊 Monthly Revenue Chart -->
        <div class="bg-white rounded-2xl shadow p-6">
            <h2 class="text-xl font-bold text-gray-800 mb-4">📈 Monthly Revenue Trend</h2>
            <canvas id="revenueChart" height="120"></canvas>
        </div>

        <!-- 🍩 Booking Status Chart -->
        <div class="bg-white rounded-2xl shadow p-6">
            <h2 class="text-xl font-bold text-gray-800 mb-4">🧾 Booking Status Overview</h2>
            <canvas id="statusChart" height="120"></canvas>
        </div>

    </div>

</div>

@section Scripts {
    <script>
        // === Monthly Revenue Data ===
        const revenueLabels = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(
                    (ViewBag.MonthlyRevenue as IEnumerable<dynamic>)?.Select(x => x.Month) ?? new List<string>()
            ));
    const revenueValues = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(
                (ViewBag.MonthlyRevenue as IEnumerable<dynamic>)?.Select(x => (decimal)x.Total) ?? new List<decimal>()
        ));

    // === Booking Status Data ===
    const statusData = {
        labels: ['Paid', 'Pending', 'Cancelled'],
        datasets: [{
            data: [
                @ViewBag.TotalPaid,
                @ViewBag.TotalPending,
                @ViewBag.TotalCancelled
            ],
            backgroundColor: ['#22c55e', '#facc15', '#ef4444'],
            hoverOffset: 6
        }]
    };

        // === Revenue Chart ===
        const ctxRevenue = document.getElementById('revenueChart');
        new Chart(ctxRevenue, {
            type: 'bar',
            data: {
                labels: revenueLabels,
                datasets: [{
                    label: 'Revenue (฿)',
                    data: revenueValues,
                    backgroundColor: ctx => {
                        const gradient = ctx.chart.ctx.createLinearGradient(0, 0, 0, 400);
                        gradient.addColorStop(0, '#3b82f6');
                        gradient.addColorStop(1, '#93c5fd');
                        return gradient;
                    },
                    borderRadius: 8
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { display: false },
                    tooltip: {
                        callbacks: {
                            label: ctx => `฿${ctx.formattedValue}`
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: { color: '#374151' },
                        grid: { color: '#f3f4f6' }
                    },
                    x: {
                        ticks: { color: '#374151' },
                        grid: { display: false }
                    }
                }
            }
        });

        // === Booking Status Chart ===
        const ctxStatus = document.getElementById('statusChart');
        new Chart(ctxStatus, {
            type: 'doughnut',
            data: statusData,
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: { color: '#374151', font: { size: 13 } }
                    },
                    tooltip: {
                        callbacks: {
                            label: ctx => `${ctx.label}: ${ctx.formattedValue}`
                        }
                    }
                }
            }
        });
    </script>
}
