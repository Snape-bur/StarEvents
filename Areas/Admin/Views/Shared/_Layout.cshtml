@using Microsoft.AspNetCore.Identity
@using StarEvents.Models
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StarEvents Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- ✅ Toast Animation -->
    <style>
        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(-10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .animate-fadeIn {
            animation: fadeIn 0.3s ease-out;
        }
    </style>
</head>

<body class="bg-gray-100 min-h-screen text-gray-800">
    <div class="flex h-screen overflow-hidden">

        <!-- ✅ Sidebar -->
        <aside class="w-64 bg-[#0f172a] text-gray-100 flex flex-col">
            <div class="p-6 text-center border-b border-gray-700">
                <h1 class="text-2xl font-bold">
                    <span class="text-blue-400">Star</span>Events
                </h1>
                <p class="text-sm text-gray-400 mt-1">Admin Panel</p>
            </div>

            <nav class="flex-1 p-4 space-y-2">
                <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index"
                   class="block px-4 py-2 rounded-lg hover:bg-blue-600 hover:text-white transition">Dashboard</a>

                <a asp-area="Admin" asp-controller="Venues" asp-action="Index"
                   class="block px-4 py-2 rounded-lg hover:bg-blue-600 hover:text-white transition">Venues</a>

                <a asp-area="Admin" asp-controller="Categories" asp-action="Index"
                   class="block px-4 py-2 rounded-lg hover:bg-blue-600 hover:text-white transition">Categories</a>

                <a asp-area="Admin" asp-controller="Events" asp-action="Index"
                   class="block px-4 py-2 rounded-lg hover:bg-blue-600 hover:text-white transition">Manage Events (CRUD)</a>

                <a asp-area="Admin" asp-controller="Events" asp-action="Manage"
                   class="block px-4 py-2 rounded-lg hover:bg-blue-600 hover:text-white transition">Event Approvals</a>

                <a asp-area="Admin" asp-controller="Bookings" asp-action="Index"
                   class="block px-4 py-2 rounded-lg hover:bg-blue-600 hover:text-white transition">Bookings</a>

                <a asp-area="Admin" asp-controller="Reports" asp-action="Index"
                   class="block px-4 py-2 rounded-lg hover:bg-blue-600 hover:text-white transition">Reports</a>

                <a asp-area="Admin" asp-controller="Users" asp-action="Index"
                   class="block px-4 py-2 rounded-lg hover:bg-blue-600 hover:text-white transition">Users</a>

                <a asp-area="Admin" asp-controller="Organizers" asp-action="Index"
                   class="block px-4 py-2 rounded-lg hover:bg-blue-600 hover:text-white transition">Organizers</a>
            </nav>

            <div class="p-4 border-t border-gray-700 text-center">
                <form asp-area="Identity" asp-page="/Account/Logout" method="post">
                    <button type="submit"
                            class="bg-red-600 hover:bg-red-700 text-white w-full py-2 rounded-lg transition">
                        Logout
                    </button>
                </form>
            </div>
        </aside>

        <!-- ✅ Main Content -->
        <main class="flex-1 flex flex-col">
            <!-- Topbar -->
            <header class="bg-white shadow p-4 flex justify-between items-center">
                <h2 class="text-xl font-semibold text-gray-700">@ViewData["Title"]</h2>
                <span class="text-sm text-gray-500">👤 @User.Identity?.Name</span>
            </header>

            <!-- Page content -->
            <section class="flex-1 overflow-y-auto p-6">
                @RenderBody()
            </section>
        </main>
    </div>

    <!-- ✅ Shared Toast Partial -->
    @await Html.PartialAsync("_Toast")

    @RenderSection("Scripts", required: false)
</body>
</html>
