@model StarEvents.Models.Venue

@{
    ViewData["Title"] = "Create Venue";
}

<div class="max-w-3xl mx-auto mt-10 bg-white p-8 rounded-xl shadow-md">
    <h2 class="text-2xl font-semibold text-blue-700 mb-6">Create New Venue</h2>

    <form asp-action="Create" method="post" class="space-y-5">
        <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>

        <div>
            <label asp-for="Name" class="block text-sm font-medium text-gray-700 mb-1">Venue Name</label>
            <input asp-for="Name"
                   class="w-full border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" />
            <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Location" class="block text-sm font-medium text-gray-700 mb-1">Location</label>
            <input asp-for="Location"
                   class="w-full border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" />
            <span asp-validation-for="Location" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Description" class="block text-sm font-medium">Description</label>
            <textarea asp-for="Description"
                      class="w-full border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500"></textarea>
            <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
        </div>


        <div>
            <label asp-for="Capacity" class="block text-sm font-medium text-gray-700 mb-1">Capacity</label>
            <input asp-for="Capacity" type="number"
                   class="w-full border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" />
            <span asp-validation-for="Capacity" class="text-red-500 text-sm"></span>
        </div>

        <div class="flex justify-between items-center pt-4">
            <a asp-action="Index" class="text-gray-600 hover:underline">← Back to List</a>
            <button type="submit"
                    class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-md shadow-md transition">
                Create Venue
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
