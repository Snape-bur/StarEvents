@model IEnumerable<StarEvents.Models.Venue>

@{
    ViewData["Title"] = "Venues";
}

<div class="max-w-6xl mx-auto mt-10">
    <!-- Header -->
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-semibold text-blue-700">Venues</h1>
        <a asp-action="Create"
           class="bg-blue-600 hover:bg-blue-700 text-white px-5 py-2 rounded-md shadow-md transition">
            + Create New Venue
        </a>
    </div>

    <!-- Table -->
    <div class="overflow-x-auto bg-white shadow-md rounded-xl ring-1 ring-black/5">
        <table class="min-w-full text-sm text-left text-gray-700 border-collapse">
            <thead class="bg-blue-50 text-blue-700 uppercase text-xs font-semibold border-b">
                <tr>
                    <th class="px-6 py-3">Venue Name</th>
                    <th class="px-6 py-3">Location</th>
                    <th class="px-6 py-3">Capacity</th>
                    <th class="px-6 py-3 text-center">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
                @foreach (var venue in Model)
                {
                    <tr class="hover:bg-blue-50 transition">
                        <td class="px-6 py-4 font-medium text-gray-900">@venue.Name</td>
                        <td class="px-6 py-4">@venue.Location</td>
                        <td class="px-6 py-4">@venue.Capacity</td>
                        <td class="px-6 py-4 text-center space-x-2">
                            <a asp-action="Edit" asp-route-id="@venue.VenueId"
                               class="text-blue-600 hover:underline">Edit</a>
                            <a asp-action="Details" asp-route-id="@venue.VenueId"
                               class="text-gray-600 hover:underline">Details</a>
                            <a asp-action="Delete" asp-route-id="@venue.VenueId"
                               class="text-red-600 hover:underline">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Empty State -->
    @if (!Model.Any())
    {
        <div class="text-center py-10 text-gray-500">
            <p>No venues available yet. Click <a asp-action="Create" class="text-blue-600 hover:underline">here</a> to add one.</p>
        </div>
    }
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

