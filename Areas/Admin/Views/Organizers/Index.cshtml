@model IEnumerable<StarEvents.Areas.Admin.Controllers.OrganizersController.OrganizerRow>
@{
    ViewData["Title"] = "Organizers";
}

<div class="max-w-7xl mx-auto mt-8">
    <h2 class="text-2xl font-semibold text-blue-700 mb-4">Organizer Management</h2>

    @if (TempData["Ok"] is string msg)
    {
        <div class="mb-4 rounded-md bg-green-50 text-green-700 p-3">@msg</div>
    }

    <div class="overflow-x-auto bg-white shadow-md rounded-xl ring-1 ring-black/5">
        <table class="min-w-full text-sm text-left text-gray-700">
            <thead class="bg-blue-50 text-blue-700 uppercase text-xs font-semibold">
                <tr>
                    <th class="px-6 py-3">Name</th>
                    <th class="px-6 py-3">Email</th>
                    <th class="px-6 py-3">Phone</th>
                    <th class="px-6 py-3">Is Organizer</th>
                    <th class="px-6 py-3">Active</th>
                    <th class="px-6 py-3">Approved At</th>
                    <th class="px-6 py-3 text-center">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
                @foreach (var u in Model)
                {
                    <tr class="hover:bg-blue-50 transition">
                        <td class="px-6 py-3">@(!string.IsNullOrWhiteSpace(u.FullName) ? u.FullName : "(no name)")</td>
                        <td class="px-6 py-3">@u.Email</td>
                        <td class="px-6 py-3">@u.Phone</td>
                        <td class="px-6 py-3">@u.IsOrganizer</td>
                        <td class="px-6 py-3">
                            @if (u.IsActive)
                            {
                                <span class="px-2 py-1 text-green-700 bg-green-100 rounded-full text-xs font-medium">Active</span>
                            }
                            else
                            {
                                <span class="px-2 py-1 text-gray-700 bg-gray-100 rounded-full text-xs font-medium">Inactive</span>
                            }
                        </td>
                        <td class="px-6 py-3">@u.ApprovedAt?.ToString("MMM dd, yyyy HH:mm")</td>
                        <td class="px-6 py-3 text-center space-x-2">
                            <form asp-action="Approve" method="post" class="inline">
                                <input type="hidden" name="id" value="@u.Id" />
                                <button class="text-blue-600 hover:underline" type="submit">Approve</button>
                            </form>

                            <form asp-action="Suspend" method="post" class="inline">
                                <input type="hidden" name="id" value="@u.Id" />
                                <button class="text-yellow-700 hover:underline" type="submit">Suspend</button>
                            </form>

                            <form asp-action="RemoveRole" method="post" class="inline">
                                <input type="hidden" name="id" value="@u.Id" />
                                <button class="text-red-600 hover:underline" type="submit">Remove Role</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
