@page
@model StarEvents.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "/Areas/Identity/Pages/Shared/_AuthLayout.cshtml"; // optional layout for auth pages
}

<div class="d-flex justify-content-center align-items-center min-vh-100 bg-light">
    <div class="card shadow-lg border-0 rounded-4" style="max-width: 420px; width: 100%;">
        <div class="card-body p-4 p-sm-5">

            <!-- Header -->
            <div class="text-center mb-4">
                <h3 class="fw-bold text-primary">StarEvents</h3>
                <p class="text-muted mb-0">Welcome back! Please log in to continue.</p>
            </div>

            <!-- Validation summary -->
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <!-- Login Form -->
            <form method="post">
                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label fw-semibold">Email address</label>
                    <input asp-for="Input.Email" class="form-control form-control-lg" autocomplete="username" placeholder="name@example.com" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.Password" class="form-label fw-semibold">Password</label>
                    <input asp-for="Input.Password" class="form-control form-control-lg" autocomplete="current-password" placeholder="••••••••" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-check mb-4">
                    <input asp-for="Input.RememberMe" class="form-check-input" />
                    <label asp-for="Input.RememberMe" class="form-check-label"></label>
                </div>

                <div class="d-grid mb-3">
                    <button type="submit" class="btn btn-primary btn-lg rounded-pill shadow-sm">Sign In</button>
                </div>
            </form>

            <!-- Footer Links -->
            <div class="text-center mt-3 small">
                <p class="mb-1">Don't have an account?</p>
                <a asp-page="/Account/Register" class="text-decoration-none fw-semibold text-primary">Register as Customer</a>
                <span class="mx-1 text-muted">|</span>
                <a asp-page="/Account/RegisterOrganizer" class="text-decoration-none fw-semibold text-success">Become an Organizer</a>
            </div>

            <div class="text-center mt-4 small">
                <a asp-page="/Account/ForgotPassword" class="text-muted text-decoration-none">Forgot your password?</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
