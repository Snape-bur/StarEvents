@page
@model StarEvents.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register as Customer";
    Layout = "/Areas/Identity/Pages/Shared/_AuthLayout.cshtml";
}

<div class="d-flex justify-content-center align-items-center min-vh-100 bg-light">
    <div class="card shadow-lg border-0 rounded-4" style="max-width: 480px; width: 100%;">
        <div class="card-body p-4 p-sm-5">

            <!-- Header -->
            <div class="text-center mb-4">
                <h3 class="fw-bold text-primary">StarEvents</h3>
                <p class="text-muted mb-0">Create your customer account</p>
            </div>

            <!-- Validation -->
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <!-- Register Form -->


            <form asp-route-returnUrl="@Model.ReturnUrl" method="post" id="registerForm">

                <div class="mb-3">
                    <label asp-for="Input.FullName" class="form-label fw-semibold">Full Name</label>
                    <input asp-for="Input.FullName" class="form-control form-control-lg" autocomplete="name" placeholder="John Doe" />
                    <span asp-validation-for="Input.FullName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label fw-semibold">Email address</label>
                    <input asp-for="Input.Email" class="form-control form-control-lg" autocomplete="username" placeholder="name@example.com" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.Password" class="form-label fw-semibold">Password</label>
                    <input asp-for="Input.Password" class="form-control form-control-lg" autocomplete="new-password" placeholder="••••••••" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.ConfirmPassword" class="form-label fw-semibold">Confirm Password</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control form-control-lg" autocomplete="new-password" placeholder="••••••••" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="d-grid mb-3">
                    <button id="registerSubmit" type="submit" class="btn btn-primary btn-lg rounded-pill shadow-sm">
                        Register
                    </button>
                </div>
            </form>

            <!-- Footer Links -->
            <div class="text-center mt-3 small">
                <p class="mb-1">Want to organize events?</p>
                <a asp-page="/Account/RegisterOrganizer" class="text-success fw-semibold text-decoration-none">Become an Organizer</a>
                <span class="mx-1 text-muted">|</span>
                <a asp-page="/Account/Login" class="text-primary fw-semibold text-decoration-none">Already have an account?</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
