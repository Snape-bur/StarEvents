@page
@model StarEvents.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register as Customer";
    Layout = "/Areas/Identity/Pages/Shared/_AuthLayout.cshtml";
}

<div class="w-full max-w-md bg-white/95 backdrop-blur-xl
            rounded-2xl border border-gray-200 shadow-glow p-8">

    <!-- Header -->
    <div class="text-center mb-6">
        <a asp-controller="Home" asp-action="Index"
           class="inline-flex items-center justify-center gap-1">
            <span class="text-3xl font-extrabold tracking-tight">
                <span class="text-gray-900">Star</span><span class="text-primary-600">Event</span>
            </span>
        </a>
        <p class="mt-3 text-sm text-gray-500">
            Create your customer account
        </p>
    </div>

    <!-- Validation -->
    <div asp-validation-summary="All" class="text-red-500 text-sm mb-3"></div>

    <!-- Register Form -->
    <form method="post" asp-route-returnUrl="@Model.ReturnUrl" class="space-y-5">

        <!-- Full Name -->
        <div>
            <label asp-for="Input.FullName"
                   class="block text-sm font-semibold text-gray-700 mb-1">
                Full Name
            </label>

            <input asp-for="Input.FullName"
                   placeholder="John Doe"
                   autocomplete="name"
                   class="w-full rounded-xl border border-gray-300 bg-white
                          px-4 py-2.5 text-gray-900 text-sm
                          placeholder-gray-400
                          shadow-sm shadow-black/5
                          focus:ring-2 focus:ring-primary-300 focus:border-primary-500 transition" />

            <span asp-validation-for="Input.FullName"
                  class="text-red-500 text-xs"></span>
        </div>

        <!-- Email -->
        <div>
            <label asp-for="Input.Email"
                   class="block text-sm font-semibold text-gray-700 mb-1">
                Email address
            </label>

            <input asp-for="Input.Email"
                   placeholder="name@example.com"
                   autocomplete="username"
                   class="w-full rounded-xl border border-gray-300 bg-white
                          px-4 py-2.5 text-gray-900 text-sm
                          placeholder-gray-400
                          shadow-sm shadow-black/5
                          focus:ring-2 focus:ring-primary-300 focus:border-primary-500 transition" />

            <span asp-validation-for="Input.Email"
                  class="text-red-500 text-xs"></span>
        </div>

        <!-- Password -->
        <div>
            <label asp-for="Input.Password"
                   class="block text-sm font-semibold text-gray-700 mb-1">
                Password
            </label>

            <input asp-for="Input.Password"
                   placeholder="••••••••"
                   autocomplete="new-password"
                   class="w-full rounded-xl border border-gray-300 bg-white
                          px-4 py-2.5 text-gray-900 text-sm
                          placeholder-gray-400
                          shadow-sm shadow-black/5
                          focus:ring-2 focus:ring-primary-300 focus:border-primary-500 transition" />

            <span asp-validation-for="Input.Password"
                  class="text-red-500 text-xs"></span>
        </div>

        <!-- Confirm Password -->
        <div>
            <label asp-for="Input.ConfirmPassword"
                   class="block text-sm font-semibold text-gray-700 mb-1">
                Confirm Password
            </label>

            <input asp-for="Input.ConfirmPassword"
                   placeholder="••••••••"
                   autocomplete="new-password"
                   class="w-full rounded-xl border border-gray-300 bg-white
                          px-4 py-2.5 text-gray-900 text-sm
                          placeholder-gray-400
                          shadow-sm shadow-black/5
                          focus:ring-2 focus:ring-primary-300 focus:border-primary-500 transition" />

            <span asp-validation-for="Input.ConfirmPassword"
                  class="text-red-500 text-xs"></span>
        </div>

        <!-- Register Button -->
        <button type="submit"
                class="w-full rounded-xl bg-gradient-to-r
                       from-primary-600 to-primary-700 text-white py-2.5
                       font-semibold shadow-lg shadow-primary-600/30
                       hover:shadow-primary-700/40 hover:scale-[1.01]
                       active:scale-[0.98] transition-all">
            Register
        </button>

    </form>

    <!-- Footer Links -->
    <div class="text-center mt-6 text-sm space-y-2">
        <p class="text-gray-600">
            Want to organize events?
            <a asp-page="/Account/RegisterOrganizer"
               class="text-emerald-600 hover:text-emerald-700 font-semibold transition">
                Become an Organizer
            </a>
        </p>

        <p>
            <a asp-page="/Account/Login"
               class="text-primary-600 hover:text-primary-700 font-semibold transition">
                Already have an account?
            </a>
        </p>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
