@{
    ViewData["Title"] = "Home";
}

<!-- HERO -->
<section id="home" class="relative">
    <div class="absolute inset-0 -z-10">
        <img src="https://images.pexels.com/photos/1190297/pexels-photo-1190297.jpeg"
             alt="Concert crowd with stage lights"
             class="h-[80vh] w-full object-cover" />
        <div class="absolute inset-0 bg-gradient-to-b from-black/70 via-black/40 to-white/5"></div>
    </div>

    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="flex min-h-[80vh] items-center">
            <div class="max-w-3xl text-white">
                <h1 class="text-4xl font-extrabold leading-tight sm:text-6xl">
                    Your Pass to the World’s Best Events
                </h1>
                <p class="mt-4 text-xl text-white/90">
                    Find tickets for concerts, theater, sports, and festivals
                    worldwide with instant mobile entry and buyer protection.
                </p>

                <div class="mt-6 flex flex-wrap items-center gap-4 text-sm text-white/90">
                    <div class="flex items-center gap-2">
                        <span class="inline-block h-2 w-2 rounded-full bg-green-400"></span>
                        Instant Mobile Tickets
                    </div>
                    <div class="flex items-center gap-2">
                        <span class="inline-block h-2 w-2 rounded-full bg-green-400"></span>
                        100% Money-Back Guarantee
                    </div>
                </div>

                <div class="mt-6 flex flex-wrap gap-3">
                    <a href="#search"
                       class="inline-flex items-center rounded-2xl bg-primary-600 px-6 py-3 font-semibold text-white shadow-brand transition active:scale-[0.98] hover:bg-primary-700">
                        Find Tickets
                    </a>
                    <a href="#events"
                       class="inline-flex items-center rounded-2xl bg-white/10 px-6 py-3 text-sm font-semibold text-white ring-1 ring-white/40 backdrop-blur-md transition hover:bg-white/20">
                        Browse Featured Events
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Search Card -->
    <div id="search" class="relative -mt-16 pb-8">
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">

            <form asp-controller="Home" asp-action="Search" method="get"
                  class="rounded-3xl bg-white p-6 shadow-2xl ring-1 ring-black/5 sm:p-8">

                <!-- GRID INPUTS -->
                <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-4">

                    <!-- Keyword -->
                    <label class="block lg:col-span-2">
                        <span class="mb-1 block text-sm font-medium text-gray-700">
                            Search Event, Venue, or Category
                        </span>
                        <input name="Keyword"
                               type="text"
                               placeholder="e.g., concert, theatre, stadium"
                               class="w-full rounded-xl border border-gray-300 bg-white px-4 py-3 text-gray-900
                                  placeholder:text-gray-400 focus:border-primary-500 focus:ring-2
                                  focus:ring-primary-200" />
                    </label>

                    <!-- Category -->
                    <label class="block">
                        <span class="mb-1 block text-sm font-medium text-gray-700">Category</span>
                        <select name="CategoryId"
                                class="w-full rounded-xl border border-gray-300 bg-white px-4 py-3 text-gray-900
                                   focus:border-primary-500 focus:ring-2 focus:ring-primary-200">
                            <option value="">All Categories</option>
                            @foreach (var c in ViewBag.Categories)
                            {
                                <option value="@c.CategoryId">@c.Name</option>
                            }
                        </select>
                    </label>

                    <!-- Venue -->
                    <label class="block">
                        <span class="mb-1 block text-sm font-medium text-gray-700">Venue</span>
                        <select name="VenueId"
                                class="w-full rounded-xl border border-gray-300 bg-white px-4 py-3 text-gray-900
                                   focus:border-primary-500 focus:ring-2 focus:ring-primary-200">
                            <option value="">All Venues</option>
                            @foreach (var v in ViewBag.Venues)
                            {
                                <option value="@v.VenueId">@v.Name</option>
                            }
                        </select>
                    </label>

                </div>
                <!-- Bottom Row: Tags + Button -->
                <div class="mt-4 flex items-center justify-between">

                    <!-- Tags -->
                    <div class="flex flex-wrap items-center gap-3 text-xs font-medium text-gray-500">
                        <button type="submit" name="Keyword" value="Concert"
                                class="inline-flex items-center gap-1 rounded-full bg-gray-100 px-3 py-1
                   hover:bg-primary-100 hover:text-primary-700 transition">
                            Concerts
                        </button>

                        <button type="submit" name="Keyword" value="Sports"
                                class="inline-flex items-center gap-1 rounded-full bg-gray-100 px-3 py-1
                   hover:bg-primary-100 hover:text-primary-700 transition">
                            Sports
                        </button>

                        <button type="submit" name="Keyword" value="Theatre"
                                class="inline-flex items-center gap-1 rounded-full bg-gray-100 px-3 py-1
                   hover:bg-primary-100 hover:text-primary-700 transition">
                            Theatre
                        </button>

                        <button type="submit" name="Keyword" value="Comedy"
                                class="inline-flex items-center gap-1 rounded-full bg-gray-100 px-3 py-1
                   hover:bg-primary-100 hover:text-primary-700 transition">
                            Comedy
                        </button>
                    </div>

                    <!-- Button -->
                    <button type="submit"
                            class="rounded-xl bg-primary-600 px-8 py-3 text-white font-semibold
               shadow-brand hover:bg-primary-700 transition active:scale-[0.98]">
                        Find Tickets
                    </button>
                </div>

            </form>

        </div>
    </div>


        </div>
    </div>
</section>

<!-- BENEFITS -->
