                            <a href="#events" class="block py-2 hover:text-primary-600">Events</a>
                            <a href="#cities" class="block py-2 hover:text-primary-600">Cities</a>
                            <a href="#faq" class="block py-2 hover:text-primary-600">FAQ</a>
                            <a href="#contact" class="block py-2 hover:text-primary-600">Contact</a>

