    </footer>

    <!-- JS: Animations, header, counters -->
    <script>
        function setupIntersectionObserver() {
          const observerOptions = {
            root: null,
            rootMargin: "0px",
            threshold: 0.1,
          };

          const observer = new IntersectionObserver((entries, obs) => {
            entries.forEach((entry) => {
              if (entry.isIntersecting) {
                const elements =
                  entry.target.querySelectorAll(".animate-on-scroll");

                elements.forEach((el) => {
                  const delay =
                    parseInt(el.getAttribute("data-scroll-delay")) || 0;

                  setTimeout(() => {
                    el.classList.remove("opacity-0", "translate-y-6");
                    el.classList.add("opacity-100", "translate-y-0");
                  }, delay);
                });

                obs.unobserve(entry.target);
              }
            });
          }, observerOptions);

          document
            .querySelectorAll(
              "#services, #events, #cities, #insights, #faq, #cta"
            )
            .forEach((section) => observer.observe(section));
        }

        function setupHeaderScroll() {
          const headerContent = document.getElementById("headerContent");
          if (!headerContent) return;

          const baseClasses = ["mt-6", "shadow-lg"];
          const stickyClasses = ["mt-2", "shadow-xl", "bg-white"];

          window.addEventListener("scroll", () => {
            if (window.scrollY > 100) {
              headerContent.classList.remove(...baseClasses);
              headerContent.classList.add(...stickyClasses);
            } else {
              headerContent.classList.remove(...stickyClasses);
              headerContent.classList.add(...baseClasses);
              headerContent.classList.add("bg-white/95");
            }
          });
        }

        function setupMobileMenu() {
          const menuBtn = document.getElementById("menuBtn");
          const mobileMenu = document.getElementById("mobileMenu");
          const menuIconOpen = document.getElementById("menuIconOpen");
          const menuIconClose = document.getElementById("menuIconClose");

          if (!menuBtn || !mobileMenu) return;

          menuBtn.addEventListener("click", () => {
            mobileMenu.classList.toggle("hidden");
            menuIconOpen?.classList.toggle("hidden");
            menuIconClose?.classList.toggle("hidden");
          });
        }

        function setupCounters() {
          const counters = document.querySelectorAll(".counter");
          if (!counters.length) return;

          let animated = false;

          const startCount = () => {
            if (animated) return;
            counters.forEach((counter) => {
              const animate = () => {
                const target = +counter.dataset.target;
                const current = +counter.innerText;
                const increment = target / 60;

                if (current < target) {
                  counter.innerText = Math.ceil(current + increment);
                  requestAnimationFrame(animate);
                } else {
                  counter.innerText = target;
                }
              };
              animate();
            });
            animated = true;
          };

          const section = document.getElementById("insights");
          if (!section) return;

          const observer = new IntersectionObserver(
            (entries) => {
              if (entries[0]?.isIntersecting) startCount();
            },
            { threshold: 0.2 }
          );

          observer.observe(section);
        }

        document.addEventListener("DOMContentLoaded", () => {
          setupIntersectionObserver();
          setupHeaderScroll();
          setupMobileMenu();
          setupCounters();

          const eventDate = document.getElementById("eventDate");
          if (eventDate) {
            const today = new Date();
            const iso = (d) => d.toISOString().split("T")[0];
            eventDate.min = iso(today);
          }

          const yearSpan = document.getElementById("year");
          if (yearSpan) {
            yearSpan.textContent = new Date().getFullYear();
          }
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
