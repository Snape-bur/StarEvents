                    <a href="#home" class="transition hover:text-primary-600">Home</a>
                    <a href="#events" class="transition hover:text-primary-600">Events</a>
                    <a href="#cities" class="transition hover:text-primary-600">Cities</a>
                    <a href="#faq" class="transition hover:text-primary-600">FAQ</a>
                    <a href="#contact" class="transition hover:text-primary-600">Contact</a>
                </nav>

                <!-- Right: Auth Buttons (desktop) -->
